<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_black"
    android:orientation="vertical"
    tools:context=".activities.PacsActivity">


    <edu.aku.akuh_health_first.helperclasses.ui.helper.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/picture_loading"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoCenter="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_maxScale="8"
            app:zoomage_minScale="0.6"
            app:zoomage_restrictBounds="false"
            app:zoomage_translatable="true"
            app:zoomage_zoomable="true" />


        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txtNamePacs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x15dp"
            android:paddingTop="@dimen/x5dp"
            android:text=""
            android:textColor="@color/c_white"
            android:textSize="14sp"
            app:typeface="@string/font_regular" />

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txtMRNPacs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNamePacs"
            android:paddingLeft="@dimen/x15dp"
            android:text=""
            android:textColor="@color/c_white"
            android:textSize="14sp"
            app:typeface="@string/font_regular" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <edu.aku.akuh_health_first.widget.AnyTextView

                android:id="@+id/btnPrevious"
                android:layout_width="@dimen/x100dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x2dp"
                android:background="@drawable/rounded_box_filled_columbia_blue"
                android:drawableLeft="@drawable/previous"
                android:drawablePadding="@dimen/x5dp"
                android:gravity="center_vertical"
                android:padding="@dimen/x10dp"
                android:text="Previous"
                android:textAllCaps="false"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s12"
                android:tint="@color/c_black" />

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom|center_horizontal"
                android:padding="@dimen/x10dp"
                android:text="0/0"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_bold" />

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/btnNext"
                android:layout_width="@dimen/x100dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x2dp"
                android:background="@drawable/rounded_box_filled_columbia_blue"
                android:drawablePadding="@dimen/x10dp"
                android:drawableRight="@drawable/next"
                android:gravity="center|right"
                android:paddingRight="@dimen/x20dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s12"

                android:tint="@color/c_black" />


        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/btnPreviousBatch"
            android:layout_width="@dimen/x100dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x2dp"
            android:background="@drawable/rounded_box_filled_columbia_blue"
            android:drawableLeft="@drawable/previous_batch"
            android:drawablePadding="@dimen/x5dp"
            android:gravity="center_vertical"
            android:padding="@dimen/x5dp"
            android:text="Previous 30"
            android:textAllCaps="false"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s12"

            android:tint="@color/c_black" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/indSeekbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.9"
            app:isb_indicator_color="@color/colorPrimary"
            app:isb_indicator_text_color="@color/c_white"
            app:isb_indicator_type="circular_bubble"
            app:isb_max="20"
            app:isb_min="1"

            app:isb_seek_bar_type="continuous_texts_ends"
            app:isb_show_indicator="true"
            app:isb_text_color="@color/colorPrimary"
            app:isb_thumb_color="@color/colorPrimary"
            app:isb_tick_type="oval"
            app:isb_track_progress_bar_color="@color/colorPrimary" />

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txttotalCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:text="1400"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s12"
            app:typeface="@string/font_bold" />

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/btnNextBatch"
            android:layout_width="@dimen/x100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/x2dp"
            android:background="@drawable/rounded_box_filled_columbia_blue"
            android:drawablePadding="@dimen/x5dp"
            android:drawableRight="@drawable/next_batch"
            android:gravity="center"
            android:padding="@dimen/x14dp"
            android:src="@drawable/ic_fab_next"
            android:text="Next 30"
            android:textAllCaps="false"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s12"
            android:tint="@color/c_black" />


    </LinearLayout>


</LinearLayout>


