<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x7dp"
        app:cardCornerRadius="@dimen/x8dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/base_green"
        app:cardElevation="@dimen/x1dp">

        <FrameLayout
            android:id="@+id/frameColorCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/x3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:drawableLeft="@drawable/calendar_immunization"
                        android:drawableTint="@color/txt_aku_blue"                        android:drawablePadding="@dimen/x5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="22 jan ,2018"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s14"
                        app:typeface="@string/font_regular" />


                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x35dp"
                        android:layout_weight=".5"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/x3dp"
                        android:text="Vaccinated"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s16"
                        app:typeface="@string/font_bold" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/x1dp"
                    android:alpha=".3"
                    android:background="@color/c_black" />

                <LinearLayout
                    android:id="@+id/contListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgIcon"
                            android:layout_width="@dimen/x70dp"
                            android:layout_height="@dimen/x70dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/x5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shape_circle"
                            android:tint="@color/base_amber" />

                        <ImageView
                            android:id="@+id/imgTransparent"
                            android:layout_width="@dimen/x70dp"
                            android:layout_height="@dimen/x70dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/x5dp"
                            android:scaleType="centerCrop"
                            />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:padding="@dimen/x2dp"
                            android:singleLine="true"
                            android:text="Vaccine Name"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s16"
                            app:typeface="@string/font_bold" />


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtRoute"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cardiopulmonary_doctor"
                            android:ellipsize="end"
                            android:padding="@dimen/x2dp"
                            android:singleLine="true"
                            android:text="Route"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s14"
                            app:typeface="@string/font_regular" />

                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/location_visittimeline"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Location"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s14"
                            app:typeface="@string/font_regular" />


                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/RLUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"


                    >


                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/btnupdateColorCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/txtBtnColor"
                        android:layout_alignTop="@id/txtBtnColor"
                        android:alpha=".25"
                        android:background="@drawable/rounded_box_filled_base_amber" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtBtnColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/x5dp"
                        android:text="UPDATE"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s14"
                        app:typeface="@string/font_bold" />


                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>