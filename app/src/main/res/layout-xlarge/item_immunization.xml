<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/x15dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="@dimen/x8dp"
        app:cardElevation="@dimen/x3dp"

        >

        <FrameLayout
            android:id="@+id/frameColorCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_green"
            android:padding="@dimen/x1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/x5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/x3dp">

                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:id="@+id/txtDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textSize="@dimen/s10"
                        android:text="22 jan ,2018" />


                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:id="@+id/txtType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45dp"
                        android:layout_weight=".5"
                        android:background="@drawable/rounded_box_filled_base_green"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/x2dp"
                        android:text="Vaccinated"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s10"
                        app:typeface="@string/font_bold" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/x1dp"
                    android:alpha=".3"
                    android:background="@color/c_black" />

                <LinearLayout
                    android:id="@+id/contListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="@dimen/x60dp"
                        android:layout_height="@dimen/x60dp"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/circle_stroke_gray"
                        android:scaleType="centerCrop"
                        android:src="@drawable/male_icon" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <edu.aku.akuh_health_first.views.AnyTextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hepatitus A "
                            android:textColor="@color/text_color_grey_dark"
                            android:textSize="@dimen/s12"
                            app:typeface="@string/font_bold" />


                        <edu.aku.akuh_health_first.views.AnyTextView
                            android:id="@+id/txtLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHC"
                            android:textColor="@color/text_color_grey_dark"
                            android:textSize="@dimen/s10"
                            app:typeface="@string/font_regular" />

                        <edu.aku.akuh_health_first.views.AnyTextView
                            android:id="@+id/txtFacility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stadium Road"
                            android:textColor="@color/text_color_grey_dark"
                            android:textSize="@dimen/s10"
                            app:typeface="@string/font_regular" />


                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/RLUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x30dp"
                    android:layout_marginRight="@dimen/x30dp"


                    >


                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/c_white"
                        android:gravity="center"
                        android:padding="@dimen/x3dp"
                        android:text="UPDATE"
                        android:textColor="@color/text_color_grey_dark"
                        android:textSize="@dimen/s10"

                        />

                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:id="@+id/btnupdateColorCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".25"
                        android:background="@drawable/rounded_box_filled_base_red"
                        android:padding="@dimen/x3dp"
                        android:gravity="center"
                        android:textSize="@dimen/s10"

                        />


                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>