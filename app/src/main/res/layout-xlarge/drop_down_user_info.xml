<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="?android:actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="@dimen/x5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="@dimen/x45dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/baby_photo2"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="@dimen/x2dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <edu.aku.akuh_health_first.views.AnyTextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x8dp"
            android:padding="@dimen/x5dp"
            android:text="Name: Dummy User"
            android:textAlignment="center"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s10"
            app:typeface="@string/font_bold" />

        <edu.aku.akuh_health_first.views.AnyTextView
            android:id="@+id/txtMRN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUserName"
            android:layout_gravity="center_vertical"

            android:layout_marginStart="@dimen/x8dp"
            android:padding="@dimen/x5dp"
            android:text="MRNumber: 111-22-33"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s10"
            app:typeface="@string/font_bold" />

    </LinearLayout>

</LinearLayout>