<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    android:orientation="vertical"
    android:padding="@dimen/x10dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90dp"
                android:layout_marginLeft="@dimen/x30dp"
                android:layout_marginRight="@dimen/x30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/akuh_logo" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90dp"
                android:layout_marginLeft="@dimen/x30dp"
                android:layout_marginRight="@dimen/x30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/family_hifazat_logo_no_padding" />

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x30dp"
                android:gravity="center"
                android:text="@string/tag_line"
                android:textColor="@color/base_amber"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />

            <edu.aku.akuh_health_first.widget.AnyEditTextView
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15dp"
                android:background="@drawable/rounded_box"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="@dimen/x5dp"
                android:hint="@string/user_id"
                android:inputType="text"
                android:maxLength="30"
                android:paddingBottom="@dimen/x8dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingRight="@dimen/x10dp"
                android:paddingTop="@dimen/x8dp"
                android:singleLine="true"
                android:textColor="@color/txt_aku_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/s12"
                app:testType="nocheck" />


            <com.andreabaccega.widget.FormEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20dp"
                android:background="@drawable/rounded_box"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="@dimen/x5dp"
                android:hint="@string/mrnNumber"
                android:inputType="textPassword"
                android:maxLength="30"
                android:paddingBottom="@dimen/x8dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingRight="@dimen/x10dp"
                android:paddingTop="@dimen/x8dp"
                android:singleLine="true"
                android:textColor="@color/txt_aku_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/s12"
                app:testType="nocheck" />


            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x20dp"
                android:background="@drawable/rounded_box_filled_base_amber"
                android:gravity="center"
                android:padding="@dimen/x8dp"
                android:text="@string/login"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:alpha="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:src="@color/c_black" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10dp"
                        android:text="OR"
                        android:textColor="#004F72"
                        android:textSize="16sp"
                        app:typeface="@string/font_bold" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:src="@color/c_black" />

                </LinearLayout>


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15dp"
                    android:gravity="center_horizontal"
                    android:text="Don't have an account?"
                    android:textColor="#004F72"
                    android:textSize="@dimen/s10"
                    app:typeface="@string/font_regular" />


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15dp"
                    android:drawablePadding="@dimen/x5dp"
                    android:drawableRight="@drawable/signup"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textColor="#004F72"
                    android:textSize="@dimen/s23"
                    android:visibility="gone"
                    app:typeface="@string/font_bold" />


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:text="@string/forgot_password"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s10"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>