<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x6dp"
        android:animateLayoutChanges="true"
        app:cardElevation="0dp"
        card_view:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/x8dp">

        <FrameLayout
            android:id="@+id/frameColorCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/x1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_box_item_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:id="@+id/txtReportName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:paddingLeft="@dimen/x4dp"
                                    android:text="Test Name"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s13"
                                    app:typeface="@string/font_bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:id="@+id/txtResult"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x5dp"
                                    android:gravity="end"
                                    android:paddingLeft="@dimen/x4dp"
                                    android:text="Result"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s15"
                                    app:typeface="@string/font_bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <edu.aku.akuh_health_first.widget.AnyTextView
                                android:id="@+id/txtNormalRangeFormatted"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/x4dp"
                                android:singleLine="true"
                                android:text="Range"
                                android:textColor="@color/base_dark_gray"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                            <edu.aku.akuh_health_first.widget.AnyTextView
                                android:id="@+id/txtState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/x5dp"
                                android:background="@drawable/rounded_stroke_red"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:padding="@dimen/x5dp"
                                android:singleLine="true"
                                android:text="State"
                                android:textColor="@color/base_dark_gray"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/contButtonLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:alpha="0.65"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/x5dp">

                                    <edu.aku.akuh_health_first.widget.AnyTextView
                                        android:id="@+id/btnHistory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/x5dp"
                                        android:background="@drawable/rounded_box_filled_primary_color"
                                        android:minWidth="@dimen/x35dp"
                                        android:padding="@dimen/x10dp"
                                        android:text="H"
                                        android:textAlignment="center"
                                        android:textColor="@color/c_white"
                                        android:textSize="@dimen/s12"
                                        android:visibility="visible"
                                        app:typeface="@string/font_bold" />

                                    <edu.aku.akuh_health_first.widget.AnyTextView
                                        android:id="@+id/txtComments"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/x5dp"
                                        android:background="@drawable/rounded_box_filled_base_amber"
                                        android:minWidth="@dimen/x35dp"
                                        android:padding="@dimen/x10dp"
                                        android:text="C"
                                        android:textAlignment="center"
                                        android:textColor="@color/c_white"
                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_bold" />


                                </LinearLayout>

                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:id="@+id/txtunit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical|end"

                                    android:minWidth="@dimen/x200dp"
                                    android:text="unit"
                                    android:textColor="@color/base_dark_gray"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_regular" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--<ImageView-->
            <!--android:id="@+id/historySeperator"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2px"-->
            <!--android:layout_margin="@dimen/x5dp"-->
            <!--android:background="@color/c_light_grey" />-->


        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>