<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x5dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="@dimen/x8dp"
        app:cardElevation="@dimen/x3dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_white"
            android:orientation="vertical"
            android:padding="@dimen/x5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:padding="@dimen/x5dp">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtReportName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Test Name"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s16"
                        app:typeface="@string/font_bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x3dp">

                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtNormalRangeFormatted"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"

                            android:text="Range"
                            android:textColor="@color/base_dark_gray"
                            android:textSize="@dimen/s13"
                            app:typeface="@string/font_regular" />

                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtState"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"

                            android:text="Range"
                            android:textColor="@color/base_dark_gray"
                            android:textSize="@dimen/s13"
                            app:typeface="@string/font_regular" />


                    </LinearLayout>

                    <!--</LinearLayout>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".3"
                    android:orientation="vertical"
                    android:padding="@dimen/x5dp">


                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x5dp"
                        android:layout_marginTop="@dimen/x3dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="2"
                        android:text="Result"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s17"
                        app:typeface="@string/font_regular" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtunit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/x5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="Normal range"
                        android:textColor="@color/base_dark_gray"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_regular" />

                    <!--</LinearLayout>-->


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/historySeperator"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_margin="@dimen/x3dp"
                android:background="@color/c_light_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/x3dp">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2dp"
                    android:background="@drawable/rounded_box_filled_base_green"
                    android:minWidth="@dimen/x120dp"
                    android:padding="@dimen/x7dp"
                    android:text="View Comments"
                    android:textAlignment="center"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s10"
                    app:typeface="@string/font_bold" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/btnHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2dp"
                    android:background="@drawable/rounded_box_filled_base_green"
                    android:minWidth="@dimen/x120dp"
                    android:padding="@dimen/x7dp"
                    android:text="View History"
                    android:textAlignment="center"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s10"
                    android:visibility="visible"
                    app:typeface="@string/font_bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>