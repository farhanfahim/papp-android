<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/x20dp"
        android:orientation="vertical"

        >


        <edu.aku.akuh_health_first.views.AnyTextView
            android:id="@+id/txtVaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_marginTop="@dimen/x10dp"
            android:background="@drawable/rounded_box"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Select Vaccine"
            android:maxLines="1"

            android:padding="@dimen/x5dp"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spVaccine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center" />


        <edu.aku.akuh_health_first.views.AnyTextView
            android:id="@+id/txtVaccinationPlanDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_marginTop="@dimen/x10dp"
            android:background="@drawable/rounded_box"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Vaccination Plan Date"
            android:maxLines="1"
            android:padding="@dimen/x5dp"

            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/s12" />


        <edu.aku.akuh_health_first.views.AnyTextView
            android:id="@+id/txtVaccinatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10dp"

            android:layout_marginTop="@dimen/x10dp"
            android:background="@drawable/rounded_box"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Vaccination Date"

            android:maxLines="1"
            android:padding="@dimen/x5dp"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/s12" />


        <edu.aku.akuh_health_first.views.AnyEditTextView
            android:id="@+id/txtVaccineLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_marginTop="@dimen/x10dp"
            android:background="@drawable/rounded_box"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Enter Location"
            android:maxLines="1"

            android:padding="@dimen/x5dp"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp"





            />


        <edu.aku.akuh_health_first.views.AnyTextView
            android:id="@+id/txtRouteId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_marginTop="@dimen/x10dp"
            android:background="@drawable/rounded_box"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Select Route"
            android:maxLines="1"
            android:padding="@dimen/x5dp"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spRouteId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center" />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x100dp"
            android:background="@drawable/rounded_box_filled_base_amber"
            android:gravity="center"
            android:text="Save"

            android:textColor="@color/c_white"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>