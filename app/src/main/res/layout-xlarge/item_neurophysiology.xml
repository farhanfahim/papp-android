<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="@dimen/x5dp"
        android:animateLayoutChanges="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="x15dp">

        <LinearLayout
            android:id="@+id/contListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtHospLoc"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:padding="@dimen/x3dp"
                android:text="HospitalLocation Stadium Road"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s10"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtReqDatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="@dimen/x3dp"
                android:text="DateTime"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s10"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtReqNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="@dimen/x3dp"
                android:text="RequestNumber"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s10"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtAdmNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"

                android:text="AdmissionNumber"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s10"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="Service"
                android:textColor="@color/c_grayasparagus"

                android:textSize="@dimen/s10"
                app:typeface="@string/font_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnShowReport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5dp"
                    android:layout_marginRight="@dimen/x5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_box_filled_base_grey"
                    android:text="Show Report"
                    android:textAllCaps="false"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s10"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnShowGraph"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/x5dp"
                    android:layout_marginRight="@dimen/x5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_box_filled_base_grey"
                    android:text="Show Graph"
                    android:textAllCaps="false"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s10"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>