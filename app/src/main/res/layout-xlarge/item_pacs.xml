<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"
        android:layout_marginBottom="@dimen/x10dp"
        android:layout_marginTop="@dimen/x10dp"
        android:animateLayoutChanges="true"
        android:padding="@dimen/x2dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="x15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/x5dp">

            <ImageView
                android:id="@+id/imgPacs"
                android:layout_width="@dimen/x120dp"
                android:layout_height="match_parent"
                android:background="@color/txt_aku_blue"
                android:scaleType="centerCrop"
                android:padding="@dimen/x3dp"

                android:src="@drawable/placeholder" />


            <LinearLayout
                android:id="@+id/contListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:orientation="vertical">


                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtpatientMRN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/radiology_report_title"
                    android:drawablePadding="@dimen/x5dp"
                    android:gravity="center_vertical"
                    android:text="patientMRN"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtstudyDataDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/radiology_reportdate"
                    android:drawablePadding="@dimen/x5dp"
                    android:gravity="center_vertical"
                    android:text="studyDataDateTime "
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s14"
                    android:padding="@dimen/x3dp"

                    app:typeface="@string/font_regular" />


                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtstudyDataCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/radiology_images"
                    android:drawablePadding="@dimen/x5dp"
                    android:gravity="center_vertical"
                    android:text="studyDataCount"
                    android:padding="@dimen/x3dp"

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>