<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="@dimen/x20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20dp"
        android:src="@drawable/imgimg" />

    <com.ctrlplusz.anytextview.AnyTextView
        android:id="@+id/anyTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/x15dp"
        android:gravity="center"
        android:padding="@dimen/x20dp"
        android:text="@string/start_shopping_to_enjoy"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        app:typeface="@string/font_normal" />

    <com.ctrlplusz.anytextview.AnyTextView
        android:id="@+id/btnStartShopping"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:text="Start Shopping"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/img_yes"
        app:typeface="@string/font_normal"/>

</LinearLayout>