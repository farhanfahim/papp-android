<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/contParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10dp"
                android:gravity="center">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="@dimen/x255dp"
                    android:layout_height="@dimen/x255dp"
                    android:padding="@dimen/x15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_image"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/btnCamera"
                    android:layout_width="@dimen/x40dp"
                    android:layout_height="@dimen/x40dp"
                    android:layout_alignBottom="@id/circleImageView"
                    android:layout_alignRight="@id/circleImageView"
                    android:layout_marginBottom="@dimen/x15dp"
                    android:layout_marginRight="@dimen/x15dp"
                    android:background="@drawable/imgcamera"
                    />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5dp"
                    android:hint="ABCDEFGH IJK"
                    android:gravity="center"

                    android:padding="@dimen/x5dp"
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s17"
                    app:typeface="@string/font_bold" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtMRN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="178-11-22"
                    android:padding="@dimen/x5dp"
                    android:gravity="center"

                    android:textColor="@color/base_reddish"
                    android:textSize="@dimen/s16"
                    app:typeface="@string/font_regular" />


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15dp"
                    android:hint="65 years | Male"
                    android:padding="@dimen/x5dp"
                    android:gravity="center"
                    android:textColor="@color/c_gray"
                    android:textSize="@dimen/s16"
                    app:typeface="@string/font_regular" />


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtCincNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3dp"
                    android:background="@color/line"
                    android:drawableLeft="@drawable/password_icon"
                    android:drawablePadding="@dimen/x5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="xxxx-xxxx-xxxxx"
                    android:padding="@dimen/x10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/s15"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3dp"
                    android:background="@color/line"
                    android:drawableLeft="@drawable/password_icon"
                    android:drawablePadding="@dimen/x5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="+923411111111"
                    android:padding="@dimen/x10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/s15"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3dp"
                    android:background="@color/line"
                    android:drawableLeft="@drawable/password_icon"
                    android:drawablePadding="@dimen/x5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="abc house no abc\n hhahahahh "
                    android:maxLines="2"
                    android:padding="@dimen/x10dp"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/s15"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3dp"
                    android:background="@color/line"
                    android:drawableLeft="@drawable/password_icon"
                    android:drawablePadding="@dimen/x5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="abc@gmail.com"
                    android:padding="@dimen/x10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/s15"
                    app:typeface="@string/font_regular" />
            </LinearLayout>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/x8dp"
                android:layout_marginRight="@dimen/x8dp"
                android:padding="@dimen/x8dp"
                android:src="@drawable/ic_action_edit"
                android:visibility="visible"
                app:fab_colorNormal="@color/colorPrimaryDark"
                app:fab_colorPressed="@color/base_amber"
                app:fab_colorRipple="@color/base_reddish" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>