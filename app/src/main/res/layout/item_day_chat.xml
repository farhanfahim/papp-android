<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/x20dp"
    android:layout_marginBottom="@dimen/x20dp"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"
        android:background="@color/txtDarkGrey" />


    <com.tekrevol.papp.widget.AnyTextView
        android:id="@+id/txtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"
        android:gravity="end"
        android:text="Yesterday"
        android:textColor="@color/txtDarkGrey"
        android:textSize="@dimen/s16"
        app:typeface="@string/font_light" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"
        android:background="@color/txtDarkGrey" />

</LinearLayout>