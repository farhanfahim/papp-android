<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/c_white"
    android:fillViewport="false"
    android:orientation="vertical"
    android:padding="@dimen/x5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x7dp"
            app:cardBackgroundColor="@color/base_reddish"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/contSummary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_gradient_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp"

                    >



                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:padding="@dimen/x10dp"
                        android:text="Health Summary"
                        android:textColor="@color/base_reddish"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:alpha="0.1"-->
                    <!--android:background="@color/base_reddish">-->

                <!--</LinearLayout>-->


            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            app:cardBackgroundColor="@color/base_green"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/contHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_filled_base_grey"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">



                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:padding="@dimen/x10dp"
                        android:text="Health Profile"
                        android:textColor="@color/base_green"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:alpha="0.1"-->
                    <!--android:background="@color/base_green">-->

                <!--</LinearLayout>-->
            </FrameLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x7dp"
            app:cardBackgroundColor="@color/base_amber"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/contTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_gradient_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">




                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:padding="@dimen/x10dp"
                        android:text="Visit Timeline"

                        android:textColor="@color/base_amber"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:alpha="0.1"-->
                    <!--android:background="@color/base_amber">-->

                <!--</LinearLayout>-->
            </FrameLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
</LinearLayout>