<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/c_white"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/contBasic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_filled_primary_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscriber + 3k Members"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s18"
                            app:typeface="@string/font_regular" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/contSilver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_silver"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscriber + 3k Members"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s20"
                            app:typeface="@string/font_regular" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/contGold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_gold_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscriber + 3k Members"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s20"
                            app:typeface="@string/font_regular" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4000"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            app:cardCornerRadius="@dimen/x10dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/contPlatinum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_box_platinium"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscriber + 3k Members"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s20"
                            app:typeface="@string/font_regular" />

                        <edu.aku.ehs.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6000"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s30"
                            app:typeface="@string/font_bold" />
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>