<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/x10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/x5dp"
        android:layout_marginRight="@dimen/x5dp"
        android:layout_marginTop="@dimen/x5dp"
        android:animateLayoutChanges="true"
        android:padding="@dimen/x2dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="x15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgPacs"
                android:layout_width="@dimen/x100dp"
                android:layout_height="@dimen/x100dp"
                android:layout_margin="@dimen/x3dp"
                android:padding="@dimen/x3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/male_icon" />


        <LinearLayout
            android:id="@+id/contListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x5dp"
            android:orientation="vertical">


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtstudyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="studyTitle"

                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtpatient_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="patient_Name"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtpatientMRN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="patientMRN"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtPatientGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="patientGender"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtpatientDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="patientDOB"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtstudyDataCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="studyDataCount"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtstudyDataDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="studyDataDateTime "
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>