<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x20dp"
    android:background="@color/timeline_out_dark"
    android:orientation="vertical"
    android:padding="@dimen/x2dp"
    app:corner_radius="@dimen/x10dp">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:id="@+id/contListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:orientation="vertical"
        android:padding="@dimen/x10dp"
        app:corner_radius="@dimen/x10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <edu.aku.ehs.widget.AnyTextView
                android:id="@+id/txtEmployeeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="@dimen/x3dp"
                android:singleLine="true"
                android:text="Employee Name"
                android:textColor="@color/txt_blue"
                android:textSize="@dimen/s20"
                app:typeface="@string/font_bold" />

            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="@dimen/x5dp"
                app:corner_radius="@dimen/x8dp">

                <edu.aku.ehs.widget.AnyTextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="@dimen/x3dp"
                    android:singleLine="true"
                    android:text="Enrolled"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_bold" />
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <edu.aku.ehs.widget.AnyTextView
                android:id="@+id/txDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="@dimen/x3dp"
                android:singleLine="true"
                android:text="20 July 2099"
                android:textColor="@color/txt_blue"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_regular" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_button_clr"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Schedule"
                android:textAllCaps="false"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s13" />


        </LinearLayout>


    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


</com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>