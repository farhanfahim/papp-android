<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgmainbg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/x5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x10dp">


            <LinearLayout
                android:id="@+id/contLab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_lab" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnClinicalLab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Clinical Laboratory"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_bold" />


            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/c_black" />


            <LinearLayout
                android:id="@+id/contRadiology"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_radiology" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnRadiology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Radiology"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x10dp">


            <LinearLayout
                android:id="@+id/contMedicalProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_medicalprofile" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnMedProf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Medication Profile"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/c_black" />

            <LinearLayout
                android:id="@+id/contImmunization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_immunization" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnImmunizationProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Immunization Profile"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x10dp">

            <LinearLayout
                android:id="@+id/contCardio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_cardio" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnCardio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="Cardiopulmonary and Angiograms"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/c_black" />

            <LinearLayout
                android:id="@+id/contNeuroPhysiology"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_neuro" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnNeurophysiology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Neurophysiology"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x10dp">

            <LinearLayout
                android:id="@+id/contEndo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_endo" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnEndoscopy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Endoscopy"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/c_black" />

            <LinearLayout
                android:id="@+id/contSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x130dp"
                    android:layout_height="@dimen/x130dp"
                    android:src="@drawable/hh_summary" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/btnDischargeSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Discharge Summary"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>