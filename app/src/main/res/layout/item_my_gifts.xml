<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x15dp"
        android:layout_marginTop="@dimen/x5dp"
        android:layout_marginRight="@dimen/x15dp"
        android:layout_marginBottom="@dimen/x5dp"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/x15dp"
        app:corner_radius="@dimen/x5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="0dp"
                android:layout_height="@dimen/x50dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/img_sponsors_adidas" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Token#"
                    android:textColor="@color/txtBlack"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:id="@+id/txtToken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="34b35hc"
                    android:textColor="@color/base_green"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.tekrevol.papp.widget.AnyTextView
                        android:id="@+id/txtItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="15$"
                        android:textColor="@color/base_green"
                        android:textSize="@dimen/s14"
                        app:fontFamily="@string/font_regular" />


                    <com.tekrevol.papp.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Adidas Card"
                        android:textColor="@color/txtBlack"
                        android:textSize="@dimen/s14"
                        app:fontFamily="@string/font_regular" />


                </LinearLayout>


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="for 983 points"
                    android:textColor="@color/txtBlack"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="March 25,  2019"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s12"
                app:fontFamily="@string/font_regular" />


        </LinearLayout>


    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


</LinearLayout>