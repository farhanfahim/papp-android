<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="@dimen/x20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.tekrevol.papp.widget.AnyTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/x2dp"
            android:text="Learn a new programming language and create a project from it."
            android:textColor="@color/txtBlack"
            android:textSize="@dimen/s18"
            app:fontFamily="@string/font_light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x40dp"
                    android:layout_height="@dimen/x40dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:layout_marginBottom="@dimen/x20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_task_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x5dp"
                    android:layout_marginBottom="@dimen/x20dp"
                    android:orientation="vertical">


                    <com.tekrevol.papp.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Date Started"
                        android:textColor="@color/txtGrey"
                        android:textSize="@dimen/s14"
                        app:fontFamily="@string/font_regular" />

                    <com.tekrevol.papp.widget.AnyTextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="4/12/2019"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/s16"
                        app:fontFamily="@string/font_medium" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/x20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.tekrevol.papp.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Duration"
                        android:textColor="@color/txtGrey"
                        android:textSize="@dimen/s14"
                        app:fontFamily="@string/font_regular" />

                    <com.tekrevol.papp.widget.AnyTextView
                        android:id="@+id/txtDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="30 days"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/s16"
                        app:fontFamily="@string/font_medium" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.tekrevol.papp.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Reward"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/s14"
                            app:fontFamily="@string/font_regular" />

                        <com.tekrevol.papp.widget.AnyTextView
                            android:id="@+id/txtPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="350 points"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/s16"
                            app:fontFamily="@string/font_medium" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgTask"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_trophy" />



        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Description"
                    android:textColor="@color/txtGrey"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />

                <com.tekrevol.papp.widget.AnyTextView
                    android:id="@+id/txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/txtBlack"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


        </LinearLayout>


        <com.tekrevol.papp.widget.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Attach Documents"
            android:textColor="@color/txtGrey"
            android:textSize="@dimen/s14"
            app:fontFamily="@string/font_regular" />


        <LinearLayout
            android:id="@+id/contAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                android:id="@+id/imgAttachment"
                android:layout_width="@dimen/x80dp"
                android:layout_height="@dimen/x80dp"
                android:layout_margin="@dimen/x5dp"
                android:background="@color/c_white"
                android:elevation="@dimen/x5dp"
                android:gravity="center"
                app:corner_radius="@dimen/x5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_add_attachment" />

            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAttachments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        <LinearLayout
            android:id="@+id/contButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20dp"
            android:layout_marginBottom="@dimen/x20dp">

            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/x10dp"
                android:background="@drawable/img_button_blue"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/c_white" />


            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_weight="1"
                android:background="@drawable/img_button_backgroun_amber"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/c_white" />

        </LinearLayout>


        <com.tekrevol.papp.widget.AnyTextView
            android:id="@+id/txtStartedDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="12 Days 5 Hrs 02 Mins"
            android:textColor="@color/txtGrey"
            android:textSize="@dimen/s18"
            app:fontFamily="@string/font_regular" />


    </LinearLayout>

</ScrollView>