<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/x20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_bg_wrap_height"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/x10dp">

        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/title"
            android:textColor="@color/base_amber"
            android:textSize="16sp"
            app:typeface="@string/font_bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <edu.aku.family_hifazat.widget.AnyTextView
                android:id="@+id/txtWrongPinNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Please Enter Pin Code"
                android:textColor="@color/base_reddish"
                android:textSize="16sp"
                android:visibility="gone"
                app:typeface="@string/font_regular" />


            <edu.aku.family_hifazat.widget.PinEntryEditText
                android:id="@+id/txtPinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:padding="@dimen/x50dp"
                android:textColor="@color/txt_aku_blue"
                android:textIsSelectable="false"
                android:textSize="@dimen/s20"
                android:visibility="visible"
                app:pinLineColors="@color/txt_aku_blue"
                app:typeface="@string/font_bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <edu.aku.family_hifazat.widget.AnyTextView
                android:id="@+id/txtSave"
                android:layout_width="@dimen/x90dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_box_filled_btn_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="Save"
                android:textColor="@color/c_white"
                android:textSize="14sp" />

            <edu.aku.family_hifazat.widget.AnyTextView
                android:id="@+id/txtCancel"
                android:layout_width="@dimen/x90dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_box_filled_btn_amber"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="@color/c_white"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
