<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    android:padding="@dimen/x5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cardBloodGlucose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x4dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_reddish"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x4dp"
                        android:background="@drawable/round_edges_topview"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <edu.aku.family_hifazat.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cardiopulmonary_doctor"
                            android:text="Blood Glucose"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s12"
                            app:typeface="@string/font_bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/x3dp">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Random"

                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtRandomGlucose"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:maxLines="1"
                                    android:text="170mg/dl"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/x3dp">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Fasting"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtFastingGlucose"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:maxLines="1"
                                    android:text="90mg/dl"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>


                            <edu.aku.family_hifazat.widget.AnyTextView
                                android:id="@+id/txtSugarDDTM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom|end"
                                android:paddingRight="@dimen/x5dp"
                                android:text="Apr 20, 2018 11:06"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/s8"
                                android:visibility="gone"
                                app:typeface="@string/font_regular" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardMeasurement"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x4dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_green"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x4dp"
                        android:background="@drawable/round_edges_topview"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <edu.aku.family_hifazat.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cardiopulmonary_doctor"
                            android:text="Measurements"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s12"
                            app:typeface="@string/font_bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                android:padding="@dimen/x3dp">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="BSA"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_regular" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtBSA"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:maxLines="1"
                                    android:text="1.16 gm"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/x3dp">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtHeight"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:ellipsize="end"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="168cm"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtWeight"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:maxLines="1"
                                    android:text="61kg"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>

                            <edu.aku.family_hifazat.widget.AnyTextView
                                android:id="@+id/txtMeasureDDTM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom|end"
                                android:paddingRight="@dimen/x5dp"
                                android:visibility="gone"

                                android:text="Apr 20, 2018 11:06"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/s8"
                                app:typeface="@string/font_regular" />
                        </LinearLayout>


                    </LinearLayout>


                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardBP"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x4dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_blue"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x4dp"
                        android:background="@drawable/round_edges_topview"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <edu.aku.family_hifazat.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cardiopulmonary_doctor"
                            android:text="Blood Pressure"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s12"
                            app:typeface="@string/font_bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/x3dp">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="BP High"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtBPH"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:maxLines="1"
                                    android:text="180 mmhg"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/x3dp">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="BP Low"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtBPL"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:maxLines="1"
                                    android:text="120 mmhg"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>

                            <edu.aku.family_hifazat.widget.AnyTextView
                                android:id="@+id/txtBPDDTM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom|end"
                                android:paddingRight="@dimen/x5dp"
                                android:visibility="gone"

                                android:text="Apr 20, 2018 11:06"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/s8"
                                app:typeface="@string/font_regular" />

                        </LinearLayout>


                    </LinearLayout>


                    <!--</LinearLayout>-->

                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/contLastLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>