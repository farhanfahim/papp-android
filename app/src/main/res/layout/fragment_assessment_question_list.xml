<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/txtQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/question_header"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:text="Medical History"
            android:textColor="@color/txtBlue"
            android:textSize="@dimen/s15"
            app:typeface="@string/font_medium" />

        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/txtQuestionSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/question_subheader"
            android:gravity="start"
            android:padding="@dimen/x8dp"
            android:text="Specific to Mother, Father, Brother and Sister"
            android:textColor="@color/txtDarkGrey"
            android:textSize="@dimen/s12"
            app:typeface="@string/font_regular" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seperator_light_gray"
        android:paddingBottom="@dimen/x3dp"
        android:paddingLeft="@dimen/x15dp"
        android:paddingRight="@dimen/x15dp"
        android:paddingTop="@dimen/x3dp">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x8dp"
            android:src="@drawable/ic_arrow_back"
            android:visibility="visible"
            app:fab_colorNormal="@color/base_amber"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_colorRipple="@color/colorPrimary"
            app:fab_size="normal" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x8dp"
            android:src="@drawable/ic_arrow_next"
            android:visibility="visible"
            app:fab_colorNormal="@color/base_amber"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_colorRipple="@color/colorPrimary"
            app:fab_size="normal" />


        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_button_clr"
            android:text="Done"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s16"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>

