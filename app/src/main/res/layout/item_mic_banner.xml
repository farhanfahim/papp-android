<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/x5dp">


    <edu.aku.akuh_health_first.widget.AnyTextView
        android:id="@+id/txtProcedureDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:padding="@dimen/x1dp"
        android:singleLine="true"
        android:text="Procedure Description"
        android:textColor="@color/base_amber"
        android:textSize="16sp"
        app:typeface="@string/font_bold" />

    <edu.aku.akuh_health_first.widget.AnyTextView
        android:id="@+id/txtSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:padding="@dimen/x1dp"

        android:singleLine="true"
        android:text="Source: Name"
        android:textColor="@color/base_amber"
        android:textSize="15sp"
        app:typeface="@string/font_bold" />

</LinearLayout>