<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/x20dp"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_bg_match_parent"
        android:minHeight="@dimen/x350dp"
        android:minWidth="@dimen/x330dp"
        android:orientation="vertical"
        android:padding="@dimen/x5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">


            <edu.aku.family_hifazat.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Measurements"
                android:textColor="@color/base_amber"
                android:textSize="16sp"
                app:typeface="@string/font_bold" />

            <ImageView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_amber" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x10dp"
                        android:text="Weight"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_regular" />

                    <edu.aku.family_hifazat.widget.AnyEditTextView
                        android:id="@+id/edWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x15dp"
                        android:layout_weight="1"
                        android:background="@color/c_white"
                        android:singleLine="true"
                        android:text="50 kg"
                        android:textColor="@color/txt_aku_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        app:testType="nocheck"
                        app:typeface="@string/font_regular" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_aku_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x10dp"
                        android:text="Height"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_regular" />

                    <edu.aku.family_hifazat.widget.AnyEditTextView
                        android:id="@+id/edHeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x15dp"
                        android:layout_weight="1"
                        android:background="@color/c_white"
                        android:singleLine="true"
                        android:text="158 cm"
                        android:textColor="@color/txt_aku_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        app:testType="nocheck"
                        app:typeface="@string/font_regular" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/base_amber" />

                <edu.aku.family_hifazat.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="Blood Pressure"
                    android:textColor="@color/base_amber"
                    android:textSize="16sp"
                    app:typeface="@string/font_bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_aku_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x10dp"
                        android:text="BP High"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_regular" />

                    <edu.aku.family_hifazat.widget.AnyEditTextView
                        android:id="@+id/edBPHigh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x15dp"
                        android:layout_weight="1"
                        android:background="@color/c_white"
                        android:singleLine="true"
                        android:text="180 mmhg"
                        android:textColor="@color/txt_aku_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        app:testType="nocheck"
                        app:typeface="@string/font_regular" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_aku_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x10dp"
                        android:text="BP High"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_regular" />

                    <edu.aku.family_hifazat.widget.AnyEditTextView
                        android:id="@+id/edBPLow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x15dp"
                        android:layout_weight="1"
                        android:background="@color/c_white"
                        android:singleLine="true"
                        android:text="120 mmhg"
                        android:textColor="@color/txt_aku_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        app:testType="nocheck"
                        app:typeface="@string/font_regular" />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>


        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/txtOK"
            android:layout_width="@dimen/x90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_box_filled_btn_amber"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/Ok"
            android:textColor="@color/c_white"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>


