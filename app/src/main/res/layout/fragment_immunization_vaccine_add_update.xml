<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x10dp">

            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20dp"
                android:text="Vaccine"
                android:textColor="@color/c_black"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtVaccine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:background="@drawable/imgninepatch2"
                android:drawableRight="@drawable/ic_dropdown"
                android:gravity="center_vertical"
                android:hint="Select Gender"
                android:maxLines="1"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spVaccine"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20dp"
                android:text="Vaccination Plan Date"
                android:textColor="@color/c_black"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtVaccinationPlanDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:layout_marginTop="@dimen/x3dp"
                android:background="@drawable/imgninepatch2"
                android:gravity="center_vertical"
                android:hint="tap to choose plan date"
                android:maxLines="1"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20dp"
                android:text="Vaccinated Date"
                android:textColor="@color/c_black"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtVaccinatedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:layout_marginTop="@dimen/x3dp"
                android:background="@drawable/imgninepatch2"
                android:gravity="center_vertical"
                android:hint="tap to choose date (if you've vaccinated) "
                android:maxLines="1"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20dp"
                android:text="Vaccine Location"
                android:textColor="@color/c_black"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyEditTextView
                android:id="@+id/txtVaccineLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:layout_marginTop="@dimen/x3dp"
                android:background="@drawable/imgninepatch2"
                android:gravity="center_vertical"
                android:hint="Enter Location"
                android:maxLines="1"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20dp"
                android:text="Comments"
                android:textColor="@color/c_black"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyEditTextView
                android:id="@+id/txtComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15dp"
                android:background="@drawable/imgbox"
                android:gravity="top"
                android:hint="Write comments here"
                android:padding="@dimen/x10dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:background="@drawable/rounded_box_filled_base_grey"
                android:text="Save"
                android:textColor="@color/c_white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>