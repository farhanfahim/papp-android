<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/x10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x5dp"
        android:layout_marginRight="@dimen/x5dp"
        android:layout_marginTop="@dimen/x5dp"
        android:animateLayoutChanges="true"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/x7dp"
        app:cardElevation="@dimen/x5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_light_grey"
            android:padding="@dimen/box_outline">

            <LinearLayout
                android:id="@+id/contListItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c_white"
                android:orientation="vertical"
                android:padding="@dimen/x3dp">


                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2dp"
                    android:text="Vaccinated"
                    android:textColor="@color/c_grayasparagus"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />


                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2dp"
                    android:text="Hepatitus A "
                    android:textColor="@color/c_grayasparagus"
                    android:textSize="@dimen/x16dp"
                    app:typeface="@string/font_bold" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2dp"
                    android:text="Jan 1,2016"

                    android:textColor="@color/c_grayasparagus"
                    android:textSize="@dimen/x12dp"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2dp"
                    android:text="CHC"

                    android:textColor="@color/c_grayasparagus"
                    android:textSize="@dimen/x12dp"
                    app:typeface="@string/font_regular" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/c_white">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="@dimen/x30dp"
                    android:layout_height="@dimen/x30dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x5dp"
                    android:background="@drawable/ic_updatewhatsapp"
                    android:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgStatusColor"
                android:layout_width="@dimen/x3dp"
                android:layout_height="match_parent"
                android:background="@color/base_blue" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>