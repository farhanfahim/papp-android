<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical"
    android:padding="@dimen/x8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:text="Specimen ID"

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtSpecimenNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="12312555555"
                    android:text=""

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Request Date:"
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtReqDatetime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:text="Physician Name"

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtPhysicianName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Dr abc"
                    android:text=""

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Collection Date:"
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtCollecDatetime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:text="Location:"

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="VE"
                    android:text=""
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Report Date:"
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtReportDatetime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/x5dp"
        android:background="@color/base_blue" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listClinicalLabResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>