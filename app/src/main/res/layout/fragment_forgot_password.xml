<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.tekrevol.papp.widget.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x30dp"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:text="Type in your email and we will send verification code."
            android:textColor="@color/txtDarkGrey"
            android:textSize="@dimen/s14"
            app:fontFamily="@string/font_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x20dp"
            android:background="@color/c_white"
            android:elevation="@dimen/x10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x30dp"
            android:paddingTop="@dimen/x30dp"
            android:paddingRight="@dimen/x30dp"
            android:paddingBottom="@dimen/x20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/x30dp"
                    android:layout_height="@dimen/x30dp"
                    android:layout_marginRight="@dimen/x8dp"
                    android:src="@drawable/img_email" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <com.tekrevol.papp.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x3dp"
                        android:text="Your Email"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/s12"
                        app:fontFamily="@string/font_regular" />


                    <com.tekrevol.papp.widget.AnyEditTextView
                        android:id="@+id/edtEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Please Enter Email Address"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:padding="@dimen/x3dp"
                        android:textColor="@color/txtDarkGrey"
                        android:textColorHint="@color/txtGrey"
                        android:textSize="@dimen/s12"
                        app:fontFamily="@string/font_regular"
                        app:testType="email" />


                </LinearLayout>




            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1dp"
                android:layout_marginTop="@dimen/x5dp"
                android:layout_marginBottom="@dimen/x5dp"
                android:background="@color/seperator_light_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contSendPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x15dp"
                android:background="@drawable/img_button_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x8dp"
                    android:text="Send Verification Code"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtAlreadyHaveCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10dp"
                android:padding="@dimen/x8dp"
                android:text="@string/already_have_verification_code"
                android:textColor="@color/txtBlue"
                android:textSize="@dimen/s14"
                app:fontFamily="@string/font_regular" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>