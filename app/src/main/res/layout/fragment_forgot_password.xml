<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x25dp"
                android:layout_marginRight="@dimen/x25dp"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/family_hifazat_logo_no_padding" />

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x40dp"
                android:gravity="center"
                android:text="Forgot Password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/s25"
                app:typeface="@string/font_bold" />

            <edu.aku.akuh_health_first.widget.AnyEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15dp"
                android:background="@drawable/rounded_box"
                android:drawableLeft="@drawable/imgemail_icon"
                android:drawablePadding="@dimen/x10dp"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:paddingBottom="@dimen/x5dp"
                android:paddingLeft="@dimen/x15dp"
                android:paddingRight="@dimen/x15dp"
                android:paddingTop="@dimen/x5dp"
                android:singleLine="true"
                android:textColor="@color/txt_aku_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp"
                app:testType="nocheck" />


            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x50dp"
                android:background="@drawable/rounded_box_filled_base_grey"
                android:gravity="center"
                android:padding="@dimen/x10dp"
                android:text="@string/submit"
                android:textColor="@color/c_white"
                android:textSize="17sp"
                app:typeface="@string/font_bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:gravity="center">


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>