<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/contLastLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/x5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_seperator_height"
                android:background="@color/dialog_seperator" />

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/txtShortMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/x5dp"
                android:singleLine="true"
                android:text="Glucose Random"
                android:textColor="@color/base_reddish"
                android:textSize="16sp"
                app:typeface="@string/font_bold" />

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x5dp"
                android:text="Date"
                android:textColor="@color/txt_aku_blue"
                android:textSize="14sp"
                app:typeface="@string/font_regular" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
