<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x10dp"
            android:layout_weight=".25"
            android:alpha=".8"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x10dp"
            app:cardBackgroundColor="#FEB990"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:id="@+id/contSummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x15dp"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="HEALTH SUMMARY"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x10dp"

            android:layout_weight=".25"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x10dp"
            app:cardBackgroundColor="@color/colorPrimaryHalfTransparent"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:id="@+id/contHistory"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x15dp"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="HEALTH HISTORY"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x10dp"

            android:layout_weight=".25"
            android:alpha=".8"
            android:animateLayoutChanges="true"

            android:padding="@dimen/x10dp"
            app:cardBackgroundColor="#CCDC9B"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout

                android:id="@+id/contProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x15dp"
                    android:padding="@dimen/x10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="MY PROFILE "
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x10dp"

            android:layout_weight=".25"
            android:alpha=".8"
            android:animateLayoutChanges="true"

            android:padding="@dimen/x10dp"
            app:cardBackgroundColor="#DF636B"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:id="@+id/contTimeline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x15dp"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="VISIT TIMELINE "
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x10dp"

            android:layout_weight=".25"
            android:alpha=".8"
            android:animateLayoutChanges="true"

            android:padding="@dimen/x10dp"
            app:cardBackgroundColor="#DF636B"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:id="@+id/contDownloadedFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x15dp"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="DOWNLOADED FILES"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>