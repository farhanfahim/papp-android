<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical"
    android:padding="@dimen/x10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_marginRight="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_weight=".25"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="HEALTH SUMMARY"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_marginRight="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_weight=".25"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="HEALTH SUMMARY"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_marginRight="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_weight=".25"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="HEALTH SUMMARY"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_marginRight="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:layout_weight=".25"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="x15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x100dp"
                    android:layout_height="@dimen/x100dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/x10dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="HEALTH SUMMARY"
                    android:textColor="@color/primary_text_color_selector"
                    android:textSize="@dimen/s20"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>