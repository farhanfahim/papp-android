<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/c_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x7dp"
            app:cardCornerRadius="@dimen/x10dp"
            app:cardElevation="@dimen/x5dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_reddish">


                <LinearLayout
                    android:id="@+id/contSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x4dp"
                    android:background="@drawable/round_edges_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10dp"

                    >

                    <ImageView
                        android:layout_width="@dimen/x100dp"
                        android:layout_height="@dimen/x100dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/x10dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/health_summary" />

                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:padding="@dimen/x10dp"
                        android:text="Health Summary"
                        android:textColor="@color/base_reddish"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@color/base_reddish">

                </LinearLayout>


            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x7dp"
            app:cardCornerRadius="@dimen/x10dp"
            app:cardElevation="@dimen/x5dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_green">

                <LinearLayout
                    android:id="@+id/contHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x4dp"
                    android:background="@drawable/round_edges_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10dp">


                    <ImageView
                        android:layout_width="@dimen/x100dp"
                        android:layout_height="@dimen/x100dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/x10dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/health_history" />

                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:padding="@dimen/x10dp"
                        android:text="Health History"
                        android:textColor="@color/base_green"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@color/base_green">

                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x7dp"
            app:cardCornerRadius="@dimen/x10dp"
            app:cardElevation="@dimen/x5dp"


            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_blue"
                >

                <LinearLayout
                    android:id="@+id/contProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x4dp"
                    android:background="@drawable/round_edges_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10dp">


                    <ImageView
                        android:layout_width="@dimen/x100dp"
                        android:layout_height="@dimen/x100dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/x10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/my_profile" />

                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:padding="@dimen/x10dp"
                        android:text="My Profile"

                        android:textColor="@color/base_blue"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@color/base_blue">

                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:animateLayoutChanges="true"
            android:padding="@dimen/x7dp"
            app:cardCornerRadius="@dimen/x10dp"
            app:cardElevation="@dimen/x5dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_amber"

                >

                <LinearLayout
                    android:id="@+id/contTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x4dp"
                    android:background="@drawable/round_edges_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10dp">


                    <ImageView
                        android:layout_width="@dimen/x100dp"
                        android:layout_height="@dimen/x100dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/x10dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/visit_timeline" />

                    <edu.aku.akuh_health_first.views.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:padding="@dimen/x10dp"
                        android:text="Visit Timeline"

                        android:textColor="@color/base_amber"
                        android:textSize="@dimen/s20"
                        app:typeface="@string/font_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@color/base_amber">

                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>