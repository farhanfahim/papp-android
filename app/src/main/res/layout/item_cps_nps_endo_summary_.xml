<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/base_green"
        app:cardCornerRadius="@dimen/x8dp"
        app:cardElevation="@dimen/x3dp"

        >

        <FrameLayout
            android:id="@+id/frameColorCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/x1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box_item_background"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/x5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/x5dp">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:drawableLeft="@drawable/a_icons8_calendar_filled2"
                        android:drawablePadding="@dimen/x5dp"
                        android:drawableTint="@color/txt_aku_blue"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="22 jan ,2018"
                        android:textSize="@dimen/s14" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x5dp"
                        android:layout_weight=".4"

                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgStatus"
                            android:layout_width="@dimen/x10dp"
                            android:layout_height="@dimen/x10dp"
                            android:layout_marginRight="@dimen/x5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/curve_edges_square_bullet"

                            android:tint="@color/base_amber"
                            android:visibility="gone" />


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtStatusType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/x3dp"
                            android:text="Completed"
                            android:textColor="@color/base_amber"

                            android:textSize="@dimen/s15"
                            android:visibility="gone"
                            app:typeface="@string/font_bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/x1dp"
                    android:alpha=".3"
                    android:background="@color/c_black" />

                <LinearLayout
                    android:id="@+id/contListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x2dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgIcon"
                            android:layout_width="@dimen/x45dp"
                            android:layout_height="@dimen/x45dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/x5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shape_circle"
                            android:tint="@color/base_green" />

                        <ImageView
                            android:id="@+id/imgTransparent"
                            android:layout_width="@dimen/x45dp"
                            android:layout_height="@dimen/x45dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/x5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/b_cardiopulmonary_transparent" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="@dimen/x2dp"
                            android:text="Hepatitus A "
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s16"
                            app:typeface="@string/font_bold" />


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtDrName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cardiopulmonary_doctor"
                            android:drawablePadding="@dimen/x5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="@dimen/x2dp"
                            android:text="Dr Name"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s14"
                            app:typeface="@string/font_regular" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/RlReport"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x3dp"
                        android:visibility="gone">

                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/btnReportColorCode1"
                            android:layout_alignTop="@id/btnReportColorCode1"
                            android:background="@drawable/rounded_box_filled_btn_blue"
                            android:alpha="0.8"
                            android:gravity="center"
                            android:padding="@dimen/x5dp" />


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/btnReportColorCode1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/x5dp"
                            android:text="Report"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s14"
                            app:typeface="@string/font_bold"

                            />



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RlGraph"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x3dp"
                        android:visibility="gone">



                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/btnGraphColorCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/txtGraph"
                            android:layout_alignTop="@id/txtGraph"
                            android:alpha=".8"
                            android:gravity="center"
                            android:background="@drawable/rounded_box_filled_btn_amber"
                            android:textColor="@color/c_white"
                            android:padding="@dimen/x5dp"

                            />


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtGraph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/x5dp"
                            android:text="Graph"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s14"
                            app:typeface="@string/font_bold"

                            />



                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>