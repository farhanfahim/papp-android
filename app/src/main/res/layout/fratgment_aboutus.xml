<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:orientation="vertical"
            android:padding="@dimen/x10dp">

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5dp"
                android:fontFamily="@string/font_bold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15dp"
                android:text="@string/overview"
                android:textColor="#000"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5dp"
                android:background="@drawable/imgninepatch" />

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="loading"
                android:paddingTop="@dimen/x10dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>