<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"

        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5dp"

            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardBloodGlucose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10dp"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_reddish_light"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x4dp"
                    android:background="@drawable/round_edges_topview_light_red">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/x100dp"
                            android:layout_height="@dimen/x100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x10dp"
                            android:alpha="0.1"
                            android:src="@drawable/blood_type"
                            android:tint="@color/base_reddish_light"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/x5dp"
                            android:paddingRight="@dimen/x5dp">

                            <edu.aku.family_hifazat.widget.AnyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/x5dp"
                                android:text="Blood Glucose"
                                android:textColor="@color/txt_aku_blue"
                                android:textSize="@dimen/s14"
                                android:visibility="gone"
                                app:typeface="@string/font_bold" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/x5dp">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/x3dp">


                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Fasting"
                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_bold" />


                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:id="@+id/txtFastingGlucose"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:gravity="end"
                                        android:maxLines="1"
                                        android:text="-"
                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s20"
                                        app:typeface="@string/font_bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/x3dp">


                                        <edu.aku.family_hifazat.widget.AnyTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="@dimen/x10dp"
                                            android:text="Fasting"
                                            android:textColor="@color/txt_aku_blue"
                                            android:textSize="@dimen/s12"
                                            android:visibility="invisible"
                                            app:typeface="@string/font_regular" />

                                        <edu.aku.family_hifazat.widget.AnyTextView
                                            android:id="@+id/txtGlucoUnit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_marginLeft="@dimen/x10dp"
                                            android:text="mg/dL"
                                            android:textColor="@color/txt_aku_blue"
                                            android:textSize="@dimen/s12"
                                            app:typeface="@string/font_regular" />


                                    </LinearLayout>

                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:id="@+id/txtFastingGlucoseDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingBottom="@dimen/x3dp"
                                        android:text=""

                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_regular" />


                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:id="@+id/txtFastingGlucoseStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=""
                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_regular" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/x3dp">

                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Random"
                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_bold" />


                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:id="@+id/txtRandomGlucose"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="-"
                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s20"
                                        app:typeface="@string/font_bold" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"

                                        android:paddingBottom="@dimen/x3dp">


                                        <edu.aku.family_hifazat.widget.AnyTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="@dimen/x10dp"
                                            android:text="Random"
                                            android:textColor="@color/txt_aku_blue"
                                            android:textSize="@dimen/s12"
                                            android:visibility="invisible"
                                            app:typeface="@string/font_regular" />

                                        <edu.aku.family_hifazat.widget.AnyTextView
                                            android:id="@+id/txtGlucoUnit2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_marginLeft="@dimen/x10dp"
                                            android:text="mg/dL"
                                            android:textColor="@color/txt_aku_blue"
                                            android:textSize="@dimen/s12"
                                            app:typeface="@string/font_regular" />


                                    </LinearLayout>

                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:id="@+id/txtRandomGlucoseDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingBottom="@dimen/x3dp"

                                        android:text=""
                                        android:textColor="@color/txt_aku_blue"

                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_regular" />

                                    <edu.aku.family_hifazat.widget.AnyTextView
                                        android:id="@+id/txtRandomGlucoseStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=""
                                        android:textColor="@color/txt_aku_blue"
                                        android:textSize="@dimen/s12"
                                        app:typeface="@string/font_regular" />


                                </LinearLayout>


                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtSugarDDTM"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|end"
                                    android:paddingRight="@dimen/x5dp"
                                    android:text="Apr 20, 2018 11:06"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s8"
                                    android:visibility="gone"
                                    app:typeface="@string/font_regular" />
                            </LinearLayout>


                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <edu.aku.family_hifazat.widget.AnyTextView
                android:id="@+id/btnRecordMenually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/x5dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingTop="@dimen/x5dp"
                android:text="Record Manually"
                android:textColor="@color/base_reddish_light"
                android:textSize="@dimen/s14"
                app:typeface="@string/font_bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10dp"
                android:background="@drawable/rounded_box_filled_base_red"
                android:orientation="vertical"
                android:padding="@dimen/x1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box_light_grey"

                    android:padding="@dimen/x5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x5dp">


                        <edu.aku.family_hifazat.widget.AnyTextView
                            android:id="@+id/txtGLUR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x5dp"
                            android:layout_marginLeft="@dimen/x5dp"
                            android:layout_marginTop="@dimen/x5dp"
                            android:text="-"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s14"
                            app:typeface="@string/font_bold" />

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/number_picker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtGLUR"
                            android:layout_centerInParent="true"
                            app:np_dividerColor="@color/base_gray"
                            app:np_dividerThickness="@dimen/x1dp"
                            app:np_orientation="horizontal"

                            app:np_scrollerEnabled="true"
                            app:np_selectedTextColor="@color/base_reddish_light"
                            app:np_selectedTextSize="@dimen/s17"
                            app:np_textColor="@color/base_reddish_light"
                            app:np_textSize="@dimen/s13"
                            app:np_typeface="@string/font_regular"
                            app:np_wheelItemCount="10"
                            app:np_wrapSelectorWheel="false" />

                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:id="@+id/txtFasting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gluco_button_left_selected"
                        android:gravity="center"
                        android:padding="@dimen/x10dp"
                        android:text="Fasting"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">


                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:id="@+id/txtRandom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gluco_button_right_unselected"
                        android:gravity="center"
                        android:padding="@dimen/x10dp"
                        android:text="Random"
                        android:textColor="@color/base_reddish"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/x10dp">

        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/btnSave"
            android:layout_width="@dimen/x100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_marginRight="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:alpha="0.2"
            android:background="@drawable/rounded_box_filled_base_grey"
            android:enabled="false"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="Save"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s14"
            app:typeface="@string/font_bold" />

        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/x100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x10dp"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:background="@drawable/rounded_box_filled_btn_amber"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="Cancel"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s14"
            app:typeface="@string/font_bold" />


    </LinearLayout>

</LinearLayout>





