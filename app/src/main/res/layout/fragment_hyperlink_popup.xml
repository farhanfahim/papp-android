<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_white_more_rounded"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/x10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Enter Link"
                android:textColor="@color/base_amber"
                android:textSize="@dimen/s16"
                app:typeface="@string/font_bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <com.tekrevol.papp.widget.AnyEditTextView
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5dp"
                android:background="@drawable/rounded_box"
                android:hint="Enter Title"
                android:inputType="text"
                android:padding="@dimen/x10dp"
                android:textColor="@color/txtBlue"
                android:textIsSelectable="true"
                android:textSize="@dimen/s14"
                android:visibility="visible"
                app:typeface="@string/font_regular" />


            <com.tekrevol.papp.widget.AnyEditTextView
                android:id="@+id/edtLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:hint="Enter Link"
                android:inputType="text"
                android:padding="@dimen/x10dp"
                android:textColor="@color/txtBlue"
                android:textIsSelectable="true"
                android:textSize="@dimen/s14"
                android:visibility="visible"
                app:typeface="@string/font_regular" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/contButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtSave"
                android:layout_width="@dimen/x90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_box_filled_btn_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="Save"
                android:textColor="@color/c_white"
                android:textSize="14sp" />

            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtCancel"
                android:layout_width="@dimen/x90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_box_filled_btn_amber"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="@color/c_white"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
