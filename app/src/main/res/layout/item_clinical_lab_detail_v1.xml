<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x6dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/x8dp"
        app:cardElevation="0dp"
        card_view:cardElevation="0dp">

        <FrameLayout
            android:id="@+id/frameColorCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/x1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_box_item_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/x3dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtReportName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:paddingLeft="@dimen/x4dp"
                                    android:text="Test Name Test Name "
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s16"
                                    app:typeface="@string/font_bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:minWidth="@dimen/x80dp"
                                android:orientation="vertical">

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtResult"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x5dp"
                                    android:paddingLeft="@dimen/x4dp"
                                    android:text="Reactive (40.1)"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s16"
                                    app:typeface="@string/font_bold" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtunit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x5dp"
                                    android:ellipsize="end"
                                    android:gravity="top|end"

                                    android:text="unit"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/s9"
                                    app:typeface="@string/font_regular" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/contButtonLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.9"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/x2dp"
                                android:paddingLeft="@dimen/x5dp"
                                android:paddingRight="@dimen/x5dp"
                                android:paddingTop="@dimen/x2dp"

                                >

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/btnHistory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x5dp"
                                    android:background="@drawable/rounded_box_filled_btn_amber"
                                    android:minWidth="@dimen/x30dp"
                                    android:padding="@dimen/x3dp"
                                    android:text="H"
                                    android:textAlignment="center"
                                    android:textColor="@color/c_white"
                                    android:textSize="@dimen/s12"
                                    android:visibility="visible"
                                    app:typeface="@string/font_bold" />

                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtComments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/x3dp"
                                    android:background="@drawable/rounded_box_filled_btn_blue"
                                    android:minWidth="@dimen/x30dp"
                                    android:padding="@dimen/x3dp"
                                    android:text="C"
                                    android:textAlignment="center"
                                    android:textColor="@color/c_white"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_bold" />


                            </LinearLayout>


                            <edu.aku.family_hifazat.widget.AnyTextView
                                android:id="@+id/txtNormalRangeFormatted"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:paddingBottom="@dimen/x2dp"
                                android:paddingLeft="@dimen/x4dp"
                                android:singleLine="true"
                                android:text="Range"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|bottom"
                                android:layout_marginBottom="@dimen/x2dp"
                                android:orientation="horizontal">


                                <edu.aku.family_hifazat.widget.AnyTextView
                                    android:id="@+id/txtState"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/x3dp"
                                    android:layout_marginRight="@dimen/x3dp"
                                    android:background="@drawable/rounded_stroke_red"
                                    android:paddingBottom="@dimen/x2dp"
                                    android:paddingLeft="@dimen/x4dp"
                                    android:paddingRight="@dimen/x4dp"
                                    android:singleLine="true"
                                    android:text="High"
                                    android:textColor="@color/base_dark_gray"
                                    android:textSize="@dimen/s11"
                                    app:typeface="@string/font_regular" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--<ImageView-->
            <!--android:id="@+id/historySeperator"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2px"-->
            <!--android:layout_margin="@dimen/x5dp"-->
            <!--android:background="@color/c_light_grey" />-->


        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>