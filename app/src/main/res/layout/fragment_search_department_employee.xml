<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light"
    android:orientation="vertical">

    <!--android:background="@drawable/test2"-->
    <RelativeLayout
        android:id="@+id/contParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="Please select division to search departments."
            android:textColor="@color/txtBlue"
            android:textSize="@dimen/s15"
            android:visibility="gone"
            app:typeface="@string/font_bold" />

        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_banner"
            android:visibility="visible" />


        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40dp"
            android:layout_marginRight="@dimen/x40dp"
            android:layout_marginTop="@dimen/x5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <edu.aku.ehs.widget.AnyTextView
                android:id="@+id/txtSessionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/x3dp"
                android:singleLine="true"
                android:text="Session Name: IT Session - 1"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s14"
                android:visibility="visible" />


            <edu.aku.ehs.widget.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/x5dp"
                android:text="Division"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_medium" />


            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                android:id="@+id/contSelectDivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15dp"
                android:background="@color/c_white"
                android:elevation="@dimen/x3dp"
                android:gravity="center"
                android:visibility="visible"
                app:corner_radius="@dimen/x15dp">


                <edu.aku.ehs.widget.AnyTextView
                    android:id="@+id/txtSelectDivision"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5dp"
                    android:layout_marginRight="@dimen/x5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/transparent"
                    android:hint="Select Division"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/x8dp"
                    android:textColor="@color/txtBlue"
                    android:textColorHint="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x5dp"
                    android:padding="@dimen/x5dp"
                    android:src="@drawable/dropdown_arrow" />


            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <edu.aku.ehs.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/x5dp"
                        android:text="MR Number"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />

                    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                        android:id="@+id/contSearchByMR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/c_white"
                        android:elevation="@dimen/x3dp"
                        android:gravity="center"
                        android:visibility="visible"
                        app:corner_radius="@dimen/x15dp">


                        <edu.aku.ehs.widget.AnyEditTextView
                            android:id="@+id/edtMRNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5dp"
                            android:layout_marginRight="@dimen/x5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/transparent"
                            android:hint="Enter MR Number"
                            android:inputType="number"
                            android:maxLength="9"
                            android:maxLines="1"
                            android:padding="@dimen/x8dp"
                            android:textColor="@color/txtBlue"
                            android:textColorHint="@color/txtDarkGrey"
                            android:textSize="@dimen/s12"
                            app:typeface="@string/font_regular" />

                        <ImageView
                            android:id="@+id/imgSearchByMR"
                            android:layout_width="@dimen/x25dp"
                            android:layout_height="@dimen/x25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/x5dp"
                            android:background="@drawable/circle_green"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/x3dp"
                            android:src="@drawable/ic_search" />


                    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5dp"
                    android:layout_weight="1"

                    android:orientation="vertical">


                    <edu.aku.ehs.widget.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/x5dp"
                        android:text="Employee Number"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />


                    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                        android:id="@+id/contSearchByEmplID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/c_white"
                        android:elevation="@dimen/x3dp"
                        android:gravity="center"
                        android:visibility="visible"
                        app:corner_radius="@dimen/x15dp">


                        <edu.aku.ehs.widget.AnyEditTextView
                            android:id="@+id/edtEmployeeID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5dp"
                            android:layout_marginRight="@dimen/x5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/transparent"
                            android:hint="Enter Employee ID"
                            android:inputType="number"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="@dimen/x8dp"
                            android:textColor="@color/txtBlue"
                            android:textColorHint="@color/txtDarkGrey"
                            android:textSize="@dimen/s12"
                            app:typeface="@string/font_regular" />

                        <ImageView
                            android:id="@+id/imgSearchByEmplID"
                            android:layout_width="@dimen/x25dp"
                            android:layout_height="@dimen/x25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/x5dp"
                            android:background="@drawable/circle_green"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/x3dp"
                            android:src="@drawable/ic_search" />


                    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


                </LinearLayout>


            </LinearLayout>


        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:id="@+id/contSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/imgBanner"
            android:layout_marginLeft="@dimen/x40dp"
            android:layout_marginRight="@dimen/x40dp"
            android:layout_marginTop="@dimen/x150dp"
            android:background="@color/c_white"
            android:elevation="@dimen/x10dp"
            android:visibility="gone"
            app:corner_radius="@dimen/x15dp">

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x4dp"
                android:padding="@dimen/x5dp"
                android:src="@drawable/search2"
                android:tint="@color/txtBlue" />

            <edu.aku.ehs.widget.AnyEditTextView
                android:id="@+id/edtSearchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:hint="@string/search"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="@dimen/x5dp"
                android:textColor="@color/txtBlue"

                android:textColorHint="@color/txtDarkGrey"
                android:textSize="@dimen/s12" />


        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contSearch"
            android:layout_marginTop="@dimen/x5dp"
            android:orientation="vertical"
            >


            <edu.aku.ehs.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/x5dp"
                android:text="Departments:"
                android:background="@color/timeline_inp_light"
                android:textColor="@color/txtBlue"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_medium" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true" />

        </LinearLayout>





    </RelativeLayout>

</LinearLayout>

