<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical"
    android:padding="@dimen/x10dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x5dp"
            android:orientation="vertical">


                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:text="HospitalLocation Stadium Road"
                    android:textColor="@color/c_grayasparagus"
                    android:textSize="@dimen/x14dp"
                    app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtMRN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RequestServiceDateTime"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/x12dp"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RequestNumber"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/x12dp"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AdmissionNumber"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/x12dp"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textColor="@color/c_grayasparagus"
                android:textSize="@dimen/x12dp"
                app:typeface="@string/font_regular" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>