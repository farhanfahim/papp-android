<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x15dp"
        android:layout_marginTop="@dimen/x5dp"
        android:layout_marginRight="@dimen/x15dp"
        android:layout_marginBottom="@dimen/x5dp"
        android:elevation="@dimen/x5dp"
        android:background="@color/c_white"
        android:gravity="center_vertical"

        android:padding="@dimen/x10dp"
        app:corner_radius="@dimen/x5dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <com.android.papp.widget.AnyTextView
                android:id="@+id/txtNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:padding="@dimen/x5dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/s12"
                app:fontFamily="@string/font_regular" />


            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/x5dp"
                android:layout_height="wrap_content">


                <com.android.papp.widget.AnyTextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/x2dp"
                    android:text="2/26/2019"
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s10"
                    app:fontFamily="@string/font_regular" />


                <com.android.papp.widget.AnyTextView
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/x2dp"
                    android:text="25 minutes ago"
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s10"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/x15dp"
            android:layout_height="@dimen/x15dp"

            android:src="@drawable/img_drop_down"
            android:visibility="gone" />


    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

</LinearLayout>