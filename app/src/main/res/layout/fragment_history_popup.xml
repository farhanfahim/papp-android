<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/x15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_white"
        android:minWidth="280dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/x5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minWidth="270dp"
                    android:orientation="horizontal"
                    android:padding="3dp">


                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="@string/title"
                        android:textColor="@color/base_amber"
                        android:textSize="16sp"
                        app:typeface="@string/font_bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Result Date(s)"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Result(s)"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/base_amber" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtCurrentDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Current Date"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtCurrentResult"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Current Result"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtPrevDate1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Previous Date 1"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtPrevResult1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Previous Result 1"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtPrevDate2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Previous Date 2"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtPrevResult2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:singleLine="true"
                        android:text="Previous Result 2"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s13"
                        app:typeface="@string/font_bold" />


                </LinearLayout>


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtOK"
                    android:layout_width="@dimen/x120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_box_filled_base_amber"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/Ok"
                    android:textColor="@color/c_white"
                    android:textSize="14sp" />

            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>


