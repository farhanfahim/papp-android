<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="#F0F6E7"
                android:padding="@dimen/x10dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:id="@+id/txtExamName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x5dp"
                        android:text="exam name"
                        android:textColor="@color/base_amber"
                        android:textSize="@dimen/s15"
                        app:typeface="@string/font_bold" />

                    <edu.aku.family_hifazat.widget.AnyTextView
                        android:id="@+id/txtExamDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/a_icons8_calendar_filled2"
                        android:drawablePadding="@dimen/x5dp"
                        android:paddingLeft="@dimen/x5dp"
                        android:gravity="center_vertical"
                        android:text="exam date"
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s14"
                        app:typeface="@string/font_bold" />


                </LinearLayout>

                <edu.aku.family_hifazat.widget.AnyTextView
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="@dimen/x5dp"
                    android:background="@drawable/rounded_box_filled_base_green"
                    android:gravity="center"
                    android:padding="@dimen/x7dp"
                    android:text="View Report"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_bold" />
            </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10dp"
            android:text=""
            android:textColor="@color/txt_aku_blue"
            android:textSize="@dimen/s16"
            app:typeface="@string/font_regular" />
</ScrollView>

</LinearLayout>