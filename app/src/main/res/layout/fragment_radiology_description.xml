<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgmainbg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/x10dp">

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txtExamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:text=""
            android:textSize="@dimen/s16"
            app:typeface="@string/font_regular" />

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txtExamDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:text="Nothing to Display"
            android:textSize="@dimen/s16"
            app:typeface="@string/font_regular" />


        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x5dp"
            android:text=""
            android:textSize="@dimen/s16"
            app:typeface="@string/font_regular" />

    </LinearLayout>

</ScrollView>