<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x15dp"
        android:layout_marginTop="@dimen/x5dp"
        android:layout_marginRight="@dimen/x15dp"
        android:layout_marginBottom="@dimen/x5dp"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/x15dp"
        app:corner_radius="@dimen/x5dp">


        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70dp"
            android:layout_marginBottom="@dimen/x15dp"
            android:scaleType="fitStart"
            android:src="@drawable/img_sponsors_adidas" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.tekrevol.papp.widget.AnyTextView
                        android:id="@+id/txtItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Item name"
                        android:textColor="@color/base_green"
                        android:textSize="@dimen/s14"
                        app:fontFamily="@string/font_regular" />





                </LinearLayout>


                <com.tekrevol.papp.widget.AnyTextView
                    android:id="@+id/txtPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="for 983 points"
                    android:textColor="@color/txtBlack"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/contRedeemButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/img_button_redeem"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x5dp">

                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x3dp"
                    android:paddingRight="@dimen/x3dp"
                    android:text="Redeem"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s14"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


        </LinearLayout>


    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


</LinearLayout>