<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x10dp"
    android:orientation="vertical"
    android:background="@drawable/imgmainbg"

    android:padding="@dimen/x8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x3dp"
        android:animateLayoutChanges="true"
        android:padding="@dimen/x2dp"
        card_view:cardCornerRadius="@dimen/x10dp"
        card_view:cardElevation="x15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_white"
            android:orientation="vertical"
            android:padding="@dimen/x10dp">

            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:padding="@dimen/x3dp"
                android:text="Collection Date: "
                android:textSize="@dimen/s14"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtCollectionDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:padding="@dimen/x3dp"
                android:text="Mar 04, 2017 11:20"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_bold" />


            <edu.aku.akuh_health_first.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:padding="@dimen/x3dp"
                android:text="Reported Date: "
                android:textSize="@dimen/s14"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtReportedDateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:padding="@dimen/x3dp"

                android:text="Mar 06, 2017 12:20"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_bold" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listClinicalLabResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>