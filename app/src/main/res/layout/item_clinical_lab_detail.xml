<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x3dp"
        android:animateLayoutChanges="true"
        android:padding="@dimen/x2dp"
        card_view:cardCornerRadius="@dimen/x10dp"
        card_view:cardElevation="x15dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:orientation="vertical"
           >

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sodium    134 mmol/L "
                android:padding="@dimen/x5dp"
                android:textColor="@color/primary_text_color_selector"
                android:textColorHint="@color/primary_text_color_selector"
                android:textSize="@dimen/x16dp"

                app:typeface="@string/font_bold" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="(Range 136 -145)  Normal"
                android:padding="@dimen/x5dp"
                android:textColor="@color/base_amber"
                android:textColorHint="@color/primary_text_color_selector"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="According to American Diabetes Association(ADA):For Diagnosis of diabetes mellitus"
                android:maxLines="3"
                android:padding="@dimen/x5dp"

                android:textColor="@color/primary_text_color_selector"
                android:textColorHint="@color/primary_text_color_selector"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_regular" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
