<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x10dp"
        android:layout_marginTop="@dimen/x5dp"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x10dp">

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtExamDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam Date: March 11,2017"
                android:textColor="@color/primary_text_color_selector"

                android:textSize="@dimen/x14dp"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtExams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam: abcdxyz"
                android:textColor="@color/primary_text_color_selector"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: F"
                android:textColor="@color/primary_text_color_selector"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_regular" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
