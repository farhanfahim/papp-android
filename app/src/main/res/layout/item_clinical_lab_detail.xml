<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x10dp"
        android:layout_marginTop="@dimen/x5dp"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x10dp">

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mercedes-Benz S-Class"
                android:textSize="@dimen/x14dp"
                app:typeface="@string/font_regular" />

            <edu.aku.akuh_health_first.views.AnyTextView
                android:id="@+id/txtDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="412,732 QAR"
                android:textColor="#2fabba"
                android:textSize="@dimen/x12dp"
                app:typeface="@string/font_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/x5dp"
                    android:text=""
                    android:textSize="@dimen/s15"
                    android:visibility="gone"
                    app:typeface="@string/font_regular" />

                <edu.aku.akuh_health_first.views.AnyTextView
                    android:id="@+id/txtKilometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/x5dp"
                    android:text="km 20458"
                    android:textSize="@dimen/s15"
                    app:typeface="@string/font_regular" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="@dimen/x100dp"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop" />


        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
