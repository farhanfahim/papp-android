<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x8dp"
        android:layout_marginLeft="@dimen/x5dp"
        android:layout_marginRight="@dimen/x5dp"
        android:layout_marginTop="@dimen/x8dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/summary_blue"
        app:cardCornerRadius="@dimen/x8dp"
        app:cardElevation="@dimen/x3dp"

        >

        <FrameLayout
            android:id="@+id/frameColorCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/contLastLab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/contHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5dp">

                    <ImageView
                        android:id="@+id/imgTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x2dp"
                        android:src="@drawable/lab_report"
                        android:tint="@color/c_white" />

                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x5dp"
                        android:text="Summary Title"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s16"
                        app:typeface="@string/font_bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2dp"
                    android:background="@drawable/rounded_box_white">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <LinearLayout
                            android:id="@+id/contShortMessageAndStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <edu.aku.ehs.widget.AnyTextView
                                android:id="@+id/txtShortMessage"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/x5dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:padding="@dimen/x3dp"
                                android:singleLine="true"
                                android:text="Short Message"
                                android:textColor="@color/txt_aku_blue"
                                android:textSize="@dimen/s15"
                                app:typeface="@string/font_bold" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgStatus"
                                    android:layout_width="@dimen/x10dp"
                                    android:layout_height="@dimen/x10dp"

                                    android:layout_marginRight="@dimen/x5dp"
                                    android:layout_marginTop="@dimen/x1dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/curve_edges_square_bullet"
                                    android:tint="@color/summary_green"
                                    android:visibility="visible" />


                                <edu.aku.ehs.widget.AnyTextView
                                    android:id="@+id/txtStatusType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="Completed"
                                    android:textColor="@color/summary_green"
                                    android:textSize="@dimen/s15"
                                    android:visibility="visible"
                                    app:typeface="@string/font_bold" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <edu.aku.ehs.widget.AnyTextView
                                android:id="@+id/txtDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:padding="@dimen/x3dp"
                                android:text="Date"
                                android:textColor="@color/txt_aku_blue"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                            <ImageView
                                android:id="@+id/imgClick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:padding="@dimen/x3dp"
                                android:src="@drawable/ic_next_arrow"
                                android:tint="@color/colorPrimaryDark" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <!--<LinearLayout-->
            <!--android:id="@+id/llColorCode"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:alpha="0.1"-->
            <!--android:background="@color/base_blue"-->
            <!--android:orientation="horizontal">-->

            <!--</LinearLayout>-->
        </FrameLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
