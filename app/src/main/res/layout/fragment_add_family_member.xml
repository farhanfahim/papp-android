<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgmainbg"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x15dp">

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/txtFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:layout_marginTop="@dimen/x10dp"
            android:text="@string/full_name"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="personFullName" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/date_of_birth"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/txtDateofBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch2"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Select Date of Birth"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/gender"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch2"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Select Gender"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spGender"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/mr_number"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtMRNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="Enter MR Number"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="nocheck" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/relationship"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/txtRelationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch2"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:hint="Select Relationship"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spRelationship"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/cnic_number"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtCNICNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="Enter CNIC Number"
            android:inputType="number"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="nocheck" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/passport_number"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtPassportNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="Enter Passport Number"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="alphaNumeric" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/txtEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"

            android:text="@string/email_address"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="@string/enter_email_address"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="email" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/txtMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/mobile_number"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="phone" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:text="@string/landline_number"
            android:textColor="@color/text_color_grey_dark"
            android:textSize="13sp"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtLandlineNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:background="@drawable/imgninepatch"
            android:hint="Enter Landline Number"
            android:inputType="number"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            app:testType="phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/x10dp">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5dp"
                    android:text="Attach CNIC Image"
                    android:textColor="@color/text_color_grey_dark"
                    android:textSize="13sp"
                    app:typeface="@string/font_bold" />


                <edu.aku.akuh_health_first.helperclasses.ui.helper.SquareImageView
                    android:id="@+id/imgCNIC"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/x5dp"
                    android:background="@color/text_color_grey_dark"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtCNICImageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_color_grey_dark"
                    android:textSize="13sp"
                    app:typeface="@string/font_bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/x10dp">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5dp"
                    android:text="Attach Passport Image"
                    android:textColor="@color/text_color_grey_dark"
                    android:textSize="13sp"
                    app:typeface="@string/font_bold" />


                <edu.aku.akuh_health_first.helperclasses.ui.helper.SquareImageView
                    android:id="@+id/imgPassport"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/x5dp"
                    android:background="@color/text_color_grey_dark"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtPassportImageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_color_grey_dark"
                    android:textSize="13sp"
                    app:typeface="@string/font_bold" />


            </LinearLayout>

        </LinearLayout>


        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/btnAddMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x35dp"
            android:background="@drawable/rounded_box_filled_base_grey"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="@string/add"
            android:textColor="@color/c_white"
            android:textSize="17sp"
            app:typeface="@string/font_normal" />


    </LinearLayout>
</ScrollView>