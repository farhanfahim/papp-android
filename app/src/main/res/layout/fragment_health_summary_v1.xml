<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    android:padding="@dimen/x5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x4dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_reddish"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x4dp"
                        android:background="@drawable/round_edges_topview"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Height Date"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s8"
                            android:visibility="invisible"
                            app:typeface="@string/font_regular" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:scaleType="centerInside"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:src="@drawable/blood_type" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.65"
                                android:orientation="vertical"
                                 >

                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:id="@+id/txtBloodType"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="unknown"
                                    android:textColor="@color/base_reddish"
                                    android:textSize="14sp"
                                    app:typeface="@string/font_bold" />


                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|end"
                                    android:paddingRight="@dimen/x5dp"
                                    android:text="Blood Group"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x4dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_green"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x4dp"
                        android:background="@drawable/round_edges_topview"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">


                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtHeightDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Height Date"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s9"
                            app:typeface="@string/font_regular" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:scaleType="centerInside"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:src="@drawable/height" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.65"
                                android:orientation="vertical">

                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:id="@+id/txtHeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="unknown"
                                    android:textColor="@color/base_green"
                                    android:textSize="14sp"
                                    app:typeface="@string/font_bold" />


                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|end"
                                    android:paddingRight="@dimen/x5dp"
                                    android:text="Height"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x4dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="@color/base_blue"
                app:cardCornerRadius="@dimen/x10dp"
                app:cardElevation="@dimen/x5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x4dp"
                        android:background="@drawable/round_edges_topview"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/x5dp">

                        <edu.aku.akuh_health_first.widget.AnyTextView
                            android:id="@+id/txtWeightDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Weight Date"
                            android:textColor="@color/txt_aku_blue"
                            android:textSize="@dimen/s9"
                            app:typeface="@string/font_regular" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:scaleType="centerInside"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:src="@drawable/weight" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.65"
                                android:orientation="vertical">


                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:id="@+id/txtWeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="unknown"
                                    android:textColor="@color/base_blue"
                                    android:textSize="14sp"
                                    app:typeface="@string/font_bold" />


                                <edu.aku.akuh_health_first.widget.AnyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom|end"
                                    android:paddingRight="@dimen/x5dp"
                                    android:text="Weight"
                                    android:textColor="@color/txt_aku_blue"
                                    android:textSize="@dimen/s10"
                                    app:typeface="@string/font_regular" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <!--</LinearLayout>-->

                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/contLastLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>