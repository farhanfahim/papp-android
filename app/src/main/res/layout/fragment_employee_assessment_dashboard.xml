<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light">
    <!--android:background="#D3E4EE">-->

    <!--android:background="@drawable/test2"-->
    <RelativeLayout
        android:id="@+id/contParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_banner"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnDone"
            android:layout_below="@+id/imgBanner"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x20dp">


                <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:layout_marginLeft="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x20dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:background="@color/c_white"
                    android:elevation="@dimen/x3dp"
                    app:corner_radius="@dimen/x10dp">


                    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                        android:id="@+id/contListItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_user_transition"
                        android:orientation="horizontal"
                        android:padding="@dimen/x5dp"
                        app:corner_radius="@dimen/x10dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <edu.aku.ehs.widget.AnyTextView
                                    android:id="@+id/txtEmployeeName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:padding="@dimen/x3dp"
                                    android:text="Employee Name"
                                    android:textColor="@color/txtBlue"
                                    android:textSize="@dimen/s14"
                                    app:typeface="@string/font_medium" />

                            </LinearLayout>


                            <edu.aku.ehs.widget.AnyTextView
                                android:id="@+id/txtEmployeeGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:padding="@dimen/x3dp"
                                android:singleLine="true"
                                android:text="Male | 25y"
                                android:textColor="@color/txtDarkGrey"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_medium" />


                            <edu.aku.ehs.widget.AnyTextView
                                android:id="@+id/txtMRN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:padding="@dimen/x3dp"
                                android:singleLine="true"
                                android:text="400-40-40"
                                android:textColor="@color/txtDarkGrey"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_medium" />


                        </LinearLayout>


                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/x3dp"
                            android:background="@color/c_light_grey" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">


                                <edu.aku.ehs.widget.AnyTextView
                                    android:id="@+id/txDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x3dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:padding="@dimen/x3dp"
                                    android:singleLine="true"
                                    android:text="20 July 2019"
                                    android:textColor="@color/txtDarkGrey"
                                    android:textSize="@dimen/s12"
                                    app:typeface="@string/font_regular" />


                                <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/x3dp"
                                    android:background="@color/colorPrimaryDark"
                                    android:padding="@dimen/x1dp"
                                    app:corner_radius="@dimen/x5dp">

                                    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/c_white"
                                        app:corner_radius="@dimen/x5dp">

                                        <edu.aku.ehs.widget.AnyTextView
                                            android:id="@+id/txtStatus"
                                            android:layout_width="@dimen/x100dp"
                                            android:layout_height="@dimen/x20dp"
                                            android:ellipsize="end"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="Enrolled"
                                            android:textColor="@color/txtBlue"
                                            android:textSize="@dimen/s12"
                                            app:typeface="@string/font_medium" />
                                    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


                                </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


                            </LinearLayout>


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_margin="@dimen/x3dp"
                                android:background="@color/c_light_grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">


                                <com.badoualy.stepperindicator.StepperIndicator
                                    android:id="@+id/stepView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x3dp"
                                    android:layout_weight="1"
                                    app:stpi_labelColor="@color/txtBlue"
                                    app:stpi_labels="@array/sessionEmployeeSteps"
                                    app:stpi_showDoneIcon="true"
                                    app:stpi_showLabels="true"
                                    app:stpi_stepCount="4" />


                                <ImageView
                                    android:id="@+id/btnDelete"
                                    android:layout_width="@dimen/x30dp"
                                    android:layout_height="@dimen/x30dp"
                                    android:ellipsize="end"
                                    android:padding="@dimen/x5dp"
                                    android:singleLine="true"
                                    android:src="@drawable/img_delete"
                                    android:textAllCaps="false"
                                    android:textColor="@color/c_white"
                                    android:textSize="@dimen/s10"
                                    android:tint="@color/c_gray"
                                    android:visibility="visible" />


                                <ImageView
                                    android:id="@+id/btnSchedule"
                                    android:layout_width="@dimen/x30dp"
                                    android:layout_height="@dimen/x30dp"
                                    android:ellipsize="end"
                                    android:padding="@dimen/x5dp"
                                    android:singleLine="true"
                                    android:src="@drawable/img_edit"
                                    android:textAllCaps="false"
                                    android:textColor="@color/c_white"
                                    android:textSize="@dimen/s10"
                                    android:tint="@color/c_gray"
                                    android:visibility="visible" />

                            </LinearLayout>


                        </LinearLayout>


                    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

                    <ImageView
                        android:id="@+id/imgSelected"
                        android:layout_width="@dimen/x23dp"
                        android:layout_height="@dimen/x23dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x10dp"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/colorAccent"
                        android:padding="@dimen/x3dp"
                        android:src="@drawable/ic_done_white_18dp"
                        android:visibility="gone" />


                </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <info.hoang8f.widget.FButton
                        android:id="@+id/btnAssessment"
                        android:layout_width="@dimen/x300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x30dp"
                        android:drawableLeft="@drawable/img_assessment"
                        android:drawablePadding="@dimen/x5dp"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="@dimen/x5dp"
                        android:paddingLeft="@dimen/x5dp"
                        android:paddingRight="@dimen/x15dp"
                        android:paddingTop="@dimen/x5dp"
                        android:text="Assessment"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s17"
                        app:cornerRadius="@dimen/x10dp"
                        app:fButtonColor="@color/fbutton_color_clouds"
                        app:shadowHeight="@dimen/x2dp" />


                    <info.hoang8f.widget.FButton
                        android:id="@+id/btnMeasurements"

                        android:layout_width="@dimen/x300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x30dp"
                        android:drawableLeft="@drawable/img_measurements"
                        android:drawablePadding="@dimen/x5dp"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="@dimen/x5dp"
                        android:paddingLeft="@dimen/x5dp"
                        android:paddingRight="@dimen/x15dp"
                        android:paddingTop="@dimen/x5dp"
                        android:text="Measurements"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s17"
                        app:cornerRadius="@dimen/x10dp"
                        app:fButtonColor="@color/fbutton_color_clouds"
                        app:shadowHeight="@dimen/x2dp" />


                    <info.hoang8f.widget.FButton
                        android:id="@+id/btnRefer"
                        android:layout_width="@dimen/x300dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/img_refer"
                        android:drawablePadding="@dimen/x5dp"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="@dimen/x5dp"
                        android:paddingLeft="@dimen/x5dp"
                        android:paddingRight="@dimen/x15dp"
                        android:paddingTop="@dimen/x5dp"
                        android:text="Refer"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s17"
                        app:cornerRadius="@dimen/x10dp"
                        app:fButtonColor="@color/fbutton_color_clouds"
                        app:shadowHeight="@dimen/x2dp" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</RelativeLayout>

