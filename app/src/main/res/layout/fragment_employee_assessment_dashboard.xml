<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light">
    <!--android:background="#D3E4EE">-->

    <!--android:background="@drawable/test2"-->
    <RelativeLayout
        android:id="@+id/contParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_banner"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnDone"
            android:layout_below="@+id/imgBanner"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/contAssessment"
                        android:layout_width="@dimen/x150dp"
                        android:layout_height="@dimen/x150dp"
                        android:layout_margin="@dimen/x15dp"
                        android:background="@drawable/shape_circle"
                        android:elevation="@dimen/x5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/x60dp"
                                android:layout_height="@dimen/x60dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_assessment" />

                            <edu.aku.ehs.widget.AnyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/x3dp"
                                android:text="Assessment"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/s16"
                                app:typeface="@string/font_bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgAssessmentDone"
                            android:layout_width="@dimen/x35dp"
                            android:layout_height="@dimen/x35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/colorAccent"
                            android:padding="@dimen/x3dp"
                            android:src="@drawable/ic_done_white_18dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/contMeasurements"
                        android:layout_width="@dimen/x150dp"
                        android:layout_height="@dimen/x150dp"
                        android:layout_margin="@dimen/x15dp"
                        android:background="@drawable/shape_circle"
                        android:elevation="@dimen/x5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/x60dp"
                                android:layout_height="@dimen/x60dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_measurements" />

                            <edu.aku.ehs.widget.AnyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/x3dp"
                                android:text="Measurements"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/s16"
                                app:typeface="@string/font_bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgMeasurementsDone"
                            android:layout_width="@dimen/x35dp"
                            android:layout_height="@dimen/x35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/colorAccent"
                            android:padding="@dimen/x3dp"
                            android:src="@drawable/ic_done_white_18dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/contRefer"
                        android:layout_width="@dimen/x150dp"
                        android:layout_height="@dimen/x150dp"
                        android:layout_margin="@dimen/x15dp"
                        android:background="@drawable/shape_circle"
                        android:elevation="@dimen/x5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/x60dp"
                                android:layout_height="@dimen/x60dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_refer" />

                            <edu.aku.ehs.widget.AnyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/x3dp"
                                android:text="Profile"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/s16"
                                app:typeface="@string/font_bold" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgProfileDone"
                            android:layout_width="@dimen/x35dp"
                            android:layout_height="@dimen/x35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/colorAccent"
                            android:padding="@dimen/x3dp"
                            android:src="@drawable/ic_done_white_18dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</RelativeLayout>

