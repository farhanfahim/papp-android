<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"

    android:padding="@dimen/x10dp">

    <edu.aku.akuh_health_first.views.AnyTextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/user_placeholder"
        android:drawablePadding="@dimen/x10dp"
        android:text="Name: Dummy User"
        android:textColor="@color/text_color_grey_dark"
        android:textSize="@dimen/s14"
        app:typeface="@string/font_regular"

        />

    <edu.aku.akuh_health_first.views.AnyTextView
        android:id="@+id/txtMRN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/user_placeholder"
        android:drawablePadding="@dimen/x10dp"
        android:text="MRNumber: 111-22-33"
        android:textColor="@color/text_color_grey_dark"
        android:textSize="@dimen/s14"
        app:typeface="@string/font_regular"

        />


</LinearLayout>