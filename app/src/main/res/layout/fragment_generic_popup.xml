<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/x20dp"
    android:background="#F3f3f3"
    android:orientation="vertical"
    android:padding="@dimen/x15dp">


    <com.ctrlplusz.anytextview.AnyTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x10dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="#414141"
        android:textSize="22sp"
        app:typeface="@string/font_bold" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/x15dp"
        android:background="#E2E2E2" />


    <com.ctrlplusz.anytextview.AnyTextView
        android:id="@+id/txtMessage"
        android:layout_width="@dimen/x300dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x20dp"
        android:gravity="center"
        android:maxLines="4"
        android:minLines="2"
        android:ellipsize="end"
        android:text="Message"
        android:textSize="14sp"
        app:typeface="@string/font_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15dp"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_box_filled_primary_color"
            android:textColor="#fff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_box_filled_base_grey"
            android:textColor="#fff"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>
