<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgmainbg"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <edu.aku.akuh_health_first.helperclasses.ui.helper.TitleBar
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <FrameLayout
                android:id="@+id/contPermanent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titlebar"
                android:padding="@dimen/x10dp"
                android:layout_centerHorizontal="true">

                <include
                    layout="@layout/fragment_graph_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/contMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titlebar"
                android:layout_centerHorizontal="true" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLargeInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="invisible" />
        </RelativeLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <FrameLayout
                android:id="@+id/contDrawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
