                    android:layout_height="wrap_content"
                    android:padding="@dimen/x20dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_gravity="right"
                        android:padding="@dimen/x5dp"
                        android:layout_marginBottom="@dimen/x10dp"
                        android:src="@drawable/img_back2"
                        android:tint="@color/c_white" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/x80dp"
                        android:layout_height="@dimen/x80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_placeholder" />


                    <com.tekrevol.papp.widget.AnyTextView
                        android:id="@+id/txtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Mason Joe"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s18"
                        app:typeface="@string/font_bold" />


                    <com.tekrevol.papp.widget.AnyTextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/x20dp"
                        android:text="@string/masonjoe"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_light" />


                    <LinearLayout
                        android:id="@+id/contNofitications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/x10dp"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/x10dp"
                        android:paddingBottom="@dimen/x10dp">


                        <ImageView
                            android:layout_width="@dimen/x20dp"
                            android:layout_height="@dimen/x20dp"
                            android:layout_marginRight="@dimen/x10dp"
                            android:src="@drawable/img_notification" />


                        <com.tekrevol.papp.widget.AnyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Notifications"
                            android:textColor="@color/c_white"
                            android:textSize="@dimen/s16"
                            app:typeface="@string/font_regular" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x10dp"
                            android:rotation="-90"
                            android:src="@drawable/img_drop_down"
                            android:tint="@color/c_white" />


                    </LinearLayout>






                    <LinearLayout
                        android:id="@+id/contMyProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/x10dp"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/x10dp"
                        android:paddingBottom="@dimen/x10dp">


                        <ImageView
                            android:layout_width="@dimen/x20dp"
                            android:layout_height="@dimen/x20dp"
                            android:layout_marginRight="@dimen/x10dp"
                            android:src="@drawable/img_profile_icon" />


                        <com.tekrevol.papp.widget.AnyTextView
