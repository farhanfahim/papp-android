<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:animateLayoutChanges="true"
        app:cardCornerRadius="@dimen/x8dp"
        app:cardElevation="@dimen/x3dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_white"
            android:orientation="vertical"
            android:padding="@dimen/x10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <edu.aku.akuh_health_first.widget.AnyTextView
                    android:id="@+id/txtSpecimenNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Specimen ID"
                    android:text=""

                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s12"
                    app:typeface="@string/font_regular" />


            </LinearLayout>


            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/txtPhysicianName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/cardiopulmonary_doctor"
                android:ellipsize="end"
                android:hint="Physician Name"
                android:text=""
                android:textColor="@color/txt_aku_blue"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />


            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:hint="Location"
                android:text=""
                android:textColor="@color/txt_aku_blue"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_regular" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Collection Date:"
                        android:textColor="@color/base_amber"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtCollecDatetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x2dp"
                        android:text=""

                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Report Date:"
                        android:textColor="@color/base_blue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtReportDatetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x2dp"
                        android:text=""
                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Request Date:"
                        android:textColor="@color/base_green"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />

                    <edu.aku.akuh_health_first.widget.AnyTextView
                        android:id="@+id/txtReqDatetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x2dp"
                        android:text=""

                        android:textColor="@color/txt_aku_blue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_regular" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>