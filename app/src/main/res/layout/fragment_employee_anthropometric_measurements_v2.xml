<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light">

    <LinearLayout
        android:id="@+id/contParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical" >


        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_banner"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x10dp"
                    android:gravity="center_vertical">

                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/btnRecordMenually"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/x5dp"
                        android:paddingRight="@dimen/x10dp"
                        android:paddingTop="@dimen/x5dp"
                        android:text="Record Measurements"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_bold" />


                    <LinearLayout
                        android:id="@+id/contBMI"
                        android:layout_width="@dimen/x180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_box_filled_columbia_blue"
                        android:orientation="vertical"
                        android:padding="@dimen/x1dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_box_light_grey"
                            android:padding="@dimen/x3dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/x3dp">


                                <edu.aku.ehs.widget.AnyTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x5dp"
                                    android:layout_weight="1"
                                    android:text="BMI (Auto Calculate)"
                                    android:textColor="@color/txtBlue"
                                    android:textSize="@dimen/s11"
                                    app:typeface="@string/font_regular" />


                                <edu.aku.ehs.widget.AnyTextView
                                    android:id="@+id/txtBMI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/x5dp"
                                    android:text="0"
                                    android:textColor="@color/txtBlue"
                                    android:textSize="@dimen/s15"
                                    app:typeface="@string/font_bold" />


                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/x1dp">


                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/txtHeightDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3dp"
                        android:gravity="center_vertical"
                        android:text="Height (cm)"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                            android:layout_width="@dimen/x50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x1dp"
                            android:background="@color/pastel_cyan"
                            android:elevation="@dimen/x1dp"
                            android:padding="@dimen/x3dp"
                            app:corner_radius="@dimen/x5dp">

                            <edu.aku.ehs.widget.AnyEditTextView
                                android:id="@+id/txtHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:gravity="center"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:text="60"
                                android:textColor="@color/txtBlue"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                        </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


                        <edu.aku.ehs.widget.custom_seekbar.RangeSeekBar
                            android:id="@+id/sbHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2dp"
                            android:padding="@dimen/x2dp"
                            app:rsb_max="250"
                            app:rsb_min="60"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/base_amber"
                            app:rsb_progress_default_color="@color/base_gray"
                            app:rsb_progress_height="@dimen/x12dp"
                            app:rsb_thumb_drawable="@drawable/shape_circle_primary"
                            app:rsb_thumb_inactivated_drawable="@drawable/shape_circle_white_stroke_primary"
                            app:rsb_thumb_scale_ratio="1.3"
                            app:rsb_thumb_size="@dimen/x25dp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/x1dp">


                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/txtWeightDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3dp"
                        android:gravity="center_vertical"
                        android:text="Weight (kg)"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                            android:layout_width="@dimen/x50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x1dp"
                            android:background="@color/pastel_cyan"
                            android:elevation="@dimen/x1dp"
                            android:padding="@dimen/x3dp"
                            app:corner_radius="@dimen/x5dp">

                            <edu.aku.ehs.widget.AnyEditTextView
                                android:id="@+id/txtWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:gravity="center"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:lines="1"

                                android:maxLength="3"
                                android:maxLines="1"
                                android:text="0"
                                android:textColor="@color/txtBlue"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                        </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


                        <edu.aku.ehs.widget.custom_seekbar.RangeSeekBar
                            android:id="@+id/sbWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2dp"
                            android:padding="@dimen/x2dp"
                            app:rsb_max="200"
                            app:rsb_min="0"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/base_amber"
                            app:rsb_progress_default_color="@color/base_gray"
                            app:rsb_progress_height="@dimen/x12dp"
                            app:rsb_thumb_drawable="@drawable/shape_circle_primary"
                            app:rsb_thumb_inactivated_drawable="@drawable/shape_circle_white_stroke_primary"
                            app:rsb_thumb_scale_ratio="1.3"
                            app:rsb_thumb_size="@dimen/x25dp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contWaist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/x1dp">


                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/txtWaistDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3dp"
                        android:gravity="center_vertical"
                        android:text="Waist Circumference (cm)"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                            android:layout_width="@dimen/x50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x1dp"
                            android:background="@color/pastel_cyan"
                            android:elevation="@dimen/x1dp"
                            android:imeOptions="actionNext"
                            android:padding="@dimen/x3dp"
                            app:corner_radius="@dimen/x5dp">

                            <edu.aku.ehs.widget.AnyEditTextView
                                android:id="@+id/txtWaist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:text="10"
                                android:textColor="@color/txtBlue"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                        </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


                        <edu.aku.ehs.widget.custom_seekbar.RangeSeekBar
                            android:id="@+id/sbWaist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2dp"
                            android:padding="@dimen/x2dp"
                            app:rsb_max="200"
                            app:rsb_min="10"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/base_amber"
                            app:rsb_progress_default_color="@color/base_gray"
                            app:rsb_progress_height="@dimen/x12dp"
                            app:rsb_thumb_drawable="@drawable/shape_circle_primary"
                            app:rsb_thumb_inactivated_drawable="@drawable/shape_circle_white_stroke_primary"
                            app:rsb_thumb_scale_ratio="1.3"
                            app:rsb_thumb_size="@dimen/x25dp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contSystolicBP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/x1dp">


                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/txtBPSystolicDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3dp"
                        android:gravity="center_vertical"
                        android:text="Systolic Blood Pressure (mmHg)"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                            android:layout_width="@dimen/x50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x1dp"
                            android:background="@color/pastel_cyan"
                            android:elevation="@dimen/x1dp"
                            android:padding="@dimen/x3dp"
                            app:corner_radius="@dimen/x5dp">

                            <edu.aku.ehs.widget.AnyEditTextView
                                android:id="@+id/txtBPSystolic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:gravity="center"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:text="60"
                                android:textColor="@color/txtBlue"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                        </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


                        <edu.aku.ehs.widget.custom_seekbar.RangeSeekBar
                            android:id="@+id/sbSystolicBP"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2dp"
                            android:padding="@dimen/x2dp"
                            app:rsb_max="300"
                            app:rsb_min="60"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/base_amber"
                            app:rsb_progress_default_color="@color/base_gray"
                            app:rsb_progress_height="@dimen/x12dp"
                            app:rsb_thumb_drawable="@drawable/shape_circle_primary"
                            app:rsb_thumb_inactivated_drawable="@drawable/shape_circle_white_stroke_primary"
                            app:rsb_thumb_scale_ratio="1.3"
                            app:rsb_thumb_size="@dimen/x25dp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contDiastolicBP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10dp"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginRight="@dimen/x10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/x1dp">


                    <edu.aku.ehs.widget.AnyTextView
                        android:id="@+id/txtBPDiastolicDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3dp"
                        android:gravity="center_vertical"
                        android:text="Diastolic Blood Pressure (mmHg)"
                        android:textColor="@color/txtBlue"
                        android:textSize="@dimen/s12"
                        app:typeface="@string/font_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                            android:layout_width="@dimen/x50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x1dp"
                            android:background="@color/pastel_cyan"
                            android:elevation="@dimen/x1dp"
                            android:inputType="number"
                            android:padding="@dimen/x3dp"
                            app:corner_radius="@dimen/x5dp">

                            <edu.aku.ehs.widget.AnyEditTextView
                                android:id="@+id/txtBPDiastolic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:text="18"
                                android:textColor="@color/txtBlue"
                                android:textSize="@dimen/s12"
                                app:typeface="@string/font_regular" />

                        </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


                        <edu.aku.ehs.widget.custom_seekbar.RangeSeekBar
                            android:id="@+id/sbDiastolicBP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2dp"
                            android:padding="@dimen/x2dp"
                            app:rsb_max="120"
                            app:rsb_min="18"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/base_amber"
                            app:rsb_progress_default_color="@color/base_gray"
                            app:rsb_progress_height="@dimen/x12dp"
                            app:rsb_thumb_drawable="@drawable/shape_circle_primary"
                            app:rsb_thumb_inactivated_drawable="@drawable/shape_circle_white_stroke_primary"
                            app:rsb_thumb_scale_ratio="1.3"
                            app:rsb_thumb_size="@dimen/x25dp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x15dp">



            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/x8dp"
                android:layout_marginRight="@dimen/x8dp"
                android:src="@drawable/ic_arrow_next"
                android:visibility="gone"
                app:fab_colorNormal="@color/base_amber"
                app:fab_colorPressed="@color/colorAccent"
                app:fab_colorRipple="@color/colorPrimary"
                app:fab_size="normal" />


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_toLeftOf="@id/btnDone"
                android:background="@drawable/img_button_white"
                android:text="Cancel"
                android:textColor="@color/txtBlue"
                android:textSize="@dimen/s16"
                android:visibility="visible" />


            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/img_button_clr"
                android:alpha="1"
                android:text="SAVE"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s16"
                android:visibility="visible" />


        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>