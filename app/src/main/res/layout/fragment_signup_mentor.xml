<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x20dp">


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/contProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20dp"
            android:gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/x100dp"
                android:layout_height="@dimen/x100dp"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon"
                android:visibility="visible"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="@dimen/x1dp" />

            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="@dimen/x35dp"
                android:layout_height="@dimen/x35dp"
                android:layout_alignEnd="@+id/imgProfile"
                android:layout_alignBottom="@+id/imgProfile"
                android:background="@drawable/c_upload_photo"
                android:clickable="false"
                android:padding="@dimen/x10dp" />
        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <com.tekrevol.papp.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x3dp"
                            android:text="First Name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/s12"
                            app:fontFamily="@string/font_regular" />


                        <com.tekrevol.papp.widget.AnyEditTextView
                            android:id="@+id/edtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Please Enter First Name"
                            android:inputType="textPersonName"
                            android:maxLength="20"
                            android:padding="@dimen/x3dp"
                            android:textColor="@color/txtDarkGrey"
                            android:textColorHint="@color/txtGrey"
                            android:textSize="@dimen/s12"
                            app:fontFamily="@string/font_regular"
                            app:testType="personName" />


                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_marginTop="@dimen/x5dp"
                    android:layout_marginBottom="@dimen/x5dp"
                    android:background="@color/seperator_light_gray" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <com.tekrevol.papp.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x3dp"
                            android:text="Last Name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/s12"
                            app:fontFamily="@string/font_regular" />


                        <com.tekrevol.papp.widget.AnyEditTextView
                            android:id="@+id/edtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Please Enter Last Name"
                            android:inputType="textPersonName"
                            android:maxLength="20"
                            android:padding="@dimen/x3dp"
                            android:textColor="@color/txtDarkGrey"
                            android:textColorHint="@color/txtGrey"
                            android:textSize="@dimen/s12"
                            app:fontFamily="@string/font_regular"
                            app:testType="personName" />


                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_marginTop="@dimen/x5dp"
                    android:layout_marginBottom="@dimen/x5dp"
                    android:background="@color/seperator_light_gray" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Your Email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyEditTextView
                    android:id="@+id/edtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular"
                    app:testType="email" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyEditTextView
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular"
                    app:testType="nocheck" />


            </LinearLayout>


            <com.tekrevol.papp.widget.AnyTextView
                android:id="@+id/txtPasswordStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5dp"
                android:padding="@dimen/x3dp"
                android:text=""
                android:textColor="@color/base_green"
                android:textSize="@dimen/s12"
                app:fontFamily="@string/font_regular" />


            <ImageView
                android:id="@+id/imgPasswordStrength"
                android:layout_width="@dimen/x15dp"
                android:layout_height="@dimen/x15dp"
                android:layout_marginRight="@dimen/x5dp"
                android:src="@drawable/img_password" />


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Agency"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyEditTextView
                    android:id="@+id/edtAgency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Agency Name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular"
                    app:testType="alphaNumeric" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Category"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableRight="@drawable/img_drop_down"
                    android:hint="Please Select Category"
                    android:inputType="text"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:id="@+id/contLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Location"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:id="@+id/txtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableRight="@drawable/img_drop_down"
                    android:hint="Please Select Location"
                    android:inputType="text"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Designation"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyEditTextView
                    android:id="@+id/edtDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Designation"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular"
                    app:testType="alphaNumeric" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Specializations"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.libraries.kmpautotextview.KMPAutoComplTextView
                    android:id="@+id/edtSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Specializations"
                    android:maxLength="50"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:completionHighlightColor="@color/colorPrimary"
                    app:completionTextColor="@color/txtDarkGrey"
                    app:completionTextSize="@dimen/s16" />


            </LinearLayout>


            <ImageView
                android:id="@+id/imgAddSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:src="@drawable/img_add" />


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x10dp"
            android:background="@color/seperator_light_gray" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/c_white" />


        <LinearLayout
            android:id="@+id/contBtnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x5dp"
            android:background="@drawable/img_button_blue"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/x20dp"
                android:layout_height="@dimen/x20dp"
                android:layout_marginRight="@dimen/x8dp"
                android:src="@drawable/img_sign_up_add"
                android:tint="@color/c_white" />


            <com.tekrevol.papp.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x8dp"
                android:padding="@dimen/x3dp"
                android:text="Sign Up"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s14"
                app:fontFamily="@string/font_regular" />


        </LinearLayout>


        <com.tekrevol.papp.widget.AnyTextView
            android:id="@+id/txtOrLoginWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:text="Or Sign Up With"
            android:textColor="@color/txtDarkGrey"
            android:textSize="@dimen/s12"
            android:visibility="gone"
            app:fontFamily="@string/font_regular" />


        <LinearLayout
            android:id="@+id/contSocialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/contFacebookLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x20dp"
                    android:layout_height="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x3dp"
                    android:src="@drawable/img_facebook_icon" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/x3dp"
                    android:text="Facebook"
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/x1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x25dp"
                android:layout_marginRight="@dimen/x25dp"
                android:background="@color/seperator_light_gray" />


            <LinearLayout
                android:id="@+id/contTwitterLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x20dp"
                    android:layout_height="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x3dp"

                    android:src="@drawable/img_twitter_icon" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/x3dp"
                    android:text="Twitter"
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>