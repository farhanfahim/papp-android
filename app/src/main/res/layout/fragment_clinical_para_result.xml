<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">


    <edu.aku.akuh_health_first.widget.AnyTextView
        android:id="@+id/txtProcedureDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        android:ellipsize="end"
        android:gravity="left"
        android:padding="10dp"
        android:singleLine="true"
        android:text="procedure desc"
        android:textColor="@color/c_white"
        android:textSize="15sp"
        app:typeface="@string/font_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <edu.aku.akuh_health_first.widget.AnyTextView
                android:id="@+id/txtParaResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x10dp"
                android:text="Para result"
                android:textColor="@color/txt_aku_blue"
                android:textSize="14sp"
                app:typeface="@string/font_regular" />
        </ScrollView>


        <edu.aku.akuh_health_first.widget.AnyTextView
            android:id="@+id/txtViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x30dp"
            android:background="@drawable/rounded_box_filled_base_amber"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="View Sensitivities"
            android:textColor="@color/c_white" />


    </LinearLayout>

</LinearLayout>