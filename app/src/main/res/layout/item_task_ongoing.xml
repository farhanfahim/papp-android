<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x20dp"
    android:layout_marginTop="@dimen/x5dp"
    android:layout_marginRight="@dimen/x20dp"
    android:layout_marginBottom="@dimen/x5dp"
    android:background="@color/c_white"
    android:elevation="@dimen/x5dp"
    android:orientation="vertical"
    android:padding="@dimen/x10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x10dp"
        android:gravity="center_vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgTask"
            android:layout_width="@dimen/x40dp"
            android:layout_height="@dimen/x40dp"
            android:layout_marginRight="@dimen/x10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_trophy" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <com.android.papp.widget.AnyTextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/x2dp"
                android:text="Reward: 150 points"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/s10"
                app:fontFamily="@string/font_regular" />


        </LinearLayout>


    </LinearLayout>


    <com.android.papp.widget.AnyTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:padding="@dimen/x2dp"
        android:singleLine="true"
        android:text="Learn a new programming language and create a project from it."
        android:textColor="@color/txtBlack"
        android:textSize="@dimen/s14"
        app:fontFamily="@string/font_regular" />


    <com.android.papp.widget.AnyTextView
        android:id="@+id/txtDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:padding="@dimen/x2dp"
        android:singleLine="true"
        android:text="Started: 3 days ago"
        android:textColor="@color/txtDarkGrey"
        android:textSize="@dimen/s12"
        app:fontFamily="@string/font_regular" />


</LinearLayout>