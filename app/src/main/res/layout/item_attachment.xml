<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="@dimen/x80dp"
        android:layout_height="@dimen/x80dp"
        android:layout_margin="@dimen/x5dp"
        android:background="@color/c_white"
        android:elevation="@dimen/x5dp"
        android:gravity="center"
        app:corner_radius="@dimen/x5dp">

        <ImageView
            android:id="@+id/imgAttachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_file_placeholder" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/x20dp"
            android:layout_height="@dimen/x20dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/x2dp"
            android:layout_marginTop="@dimen/x2dp"
            android:layout_marginEnd="@dimen/x2dp"
            android:layout_marginBottom="@dimen/x2dp"
            android:src="@drawable/img_cancel_blue"
            android:visibility="visible" />

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


    <com.tekrevol.papp.widget.AnyTextView
        android:id="@+id/txtFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingLeft="@dimen/x2dp"
        android:paddingRight="@dimen/x2dp"
        android:singleLine="true"
        android:text="File Name"
        android:textSize="@dimen/s10" />


</LinearLayout>