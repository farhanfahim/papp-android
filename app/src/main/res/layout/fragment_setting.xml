<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="@dimen/x20dp">

            <com.ctrlplusz.anytextview.AnyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_bold"
                android:gravity="center_vertical"
                android:text="@string/notification"
                android:textColor="@color/text_grey"
                android:textStyle="bold" />

            <ToggleButton
                android:clickable="false"
                android:id="@+id/toggleBtn"
                android:layout_width="@dimen/x30dp"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_height="@dimen/x18dp"
                android:padding="@dimen/x15dp"
                android:background="@drawable/selector_toggle_state"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/base_grey" />

        <LinearLayout
            android:id="@+id/contChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="@dimen/x20dp">

            <com.ctrlplusz.anytextview.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imgarrow"
                android:drawablePadding="@dimen/x10dp"
                android:fontFamily="@string/font_bold"
                android:gravity="center_vertical"
                android:text="@string/change_password"
                android:textColor="@color/text_grey"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/base_grey" />


    </LinearLayout>
</ScrollView>