<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_menu_bg"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="@dimen/x60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x25dp"
        android:layout_marginRight="@dimen/x25dp"
        android:gravity="center"
        android:padding="@dimen/x2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/family_hifazat_logo_no_padding" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x50dp"
        android:gravity="center"
        android:orientation="vertical">

        <edu.aku.family_hifazat.widget.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x40dp"
            android:gravity="center"
            android:text="Change Password"
            android:textColor="@color/base_amber"
            android:textSize="@dimen/s20"
            app:typeface="@string/font_bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20dp"
            android:background="@drawable/rounded_box"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="@dimen/x5dp"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:paddingBottom="@dimen/x8dp"
            android:paddingLeft="@dimen/x10dp"
            android:paddingRight="@dimen/x10dp"
            android:paddingTop="@dimen/x8dp"
            android:singleLine="true"
            android:textColor="@color/txt_aku_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"
            app:testType="nocheck" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20dp"
            android:background="@drawable/rounded_box"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="@dimen/x5dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:paddingBottom="@dimen/x8dp"
            android:paddingLeft="@dimen/x10dp"
            android:paddingRight="@dimen/x10dp"
            android:paddingTop="@dimen/x8dp"
            android:singleLine="true"
            android:textColor="@color/txt_aku_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"
            app:testType="nocheck" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edtConPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20dp"
            android:background="@drawable/rounded_box"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="@dimen/x5dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:paddingBottom="@dimen/x8dp"
            android:paddingLeft="@dimen/x10dp"
            android:paddingRight="@dimen/x10dp"
            android:paddingTop="@dimen/x8dp"
            android:singleLine="true"
            android:textColor="@color/txt_aku_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"
            app:testType="nocheck" />


        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x50dp"
            android:background="@drawable/rounded_box_filled_btn_amber"
            android:gravity="center"
            android:paddingBottom="@dimen/x8dp"
            android:paddingLeft="@dimen/x10dp"
            android:paddingRight="@dimen/x10dp"
            android:paddingTop="@dimen/x8dp"
            android:text="@string/save"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s16"
            app:typeface="@string/font_bold" />


    </LinearLayout>


</LinearLayout>


