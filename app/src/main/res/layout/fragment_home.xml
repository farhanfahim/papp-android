<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_banner"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x10dp"
        android:paddingTop="@dimen/x10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgNursePic"
            android:layout_width="@dimen/x100dp"
            android:layout_height="@dimen/x100dp"
            android:src="@drawable/user_image"
            app:civ_border_color="@color/c_white"
            app:civ_border_width="@dimen/x2dp" />


        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/txtNurseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:singleLine="true"
            android:text="Nurse Name"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s17"
            app:typeface="@string/font_bold"/>

        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/txtNurseDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:singleLine="true"
            android:text="Nurse Department/ Designation"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s16"
            app:typeface="@string/font_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/x50dp">

        <LinearLayout
            android:id="@+id/contSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:background="@drawable/shadow_box_avg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_session" />

            <edu.aku.ehs.widget.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="Session"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10dp"
            android:background="@drawable/shadow_box_avg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_statistics" />

            <edu.aku.ehs.widget.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3dp"
                android:text="Stats"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/s15"
                app:typeface="@string/font_bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>