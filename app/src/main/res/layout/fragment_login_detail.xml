<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20dp"
        android:paddingTop="@dimen/x20dp"
        android:paddingRight="@dimen/x20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_marginRight="@dimen/x8dp"
                android:src="@drawable/img_email" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Your Email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyEditTextView
                    android:id="@+id/edtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular"
                    app:testType="email" />


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1dp"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x5dp"
            android:background="@color/seperator_light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/x30dp"
                android:layout_height="@dimen/x30dp"
                android:layout_marginRight="@dimen/x8dp"
                android:src="@drawable/img_password" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3dp"
                    android:text="Password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


                <com.tekrevol.papp.widget.AnyEditTextView
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Please Enter Password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:padding="@dimen/x3dp"
                    android:textColor="@color/txtDarkGrey"
                    android:textColorHint="@color/txtGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular"
                    app:testType="nocheck" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/contBtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x15dp"
            android:background="@drawable/img_button_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <com.tekrevol.papp.widget.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x8dp"
                android:padding="@dimen/x3dp"
                android:text="Login"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s14"
                app:fontFamily="@string/font_regular" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x8dp"
                android:src="@drawable/img_arrow_next" />


        </LinearLayout>


        <com.tekrevol.papp.widget.AnyTextView
            android:id="@+id/txtOrLoginWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:text="Or Login With"
            android:textColor="@color/txtDarkGrey"
            android:textSize="@dimen/s12"
            app:fontFamily="@string/font_regular" />


        <LinearLayout
            android:id="@+id/contSocialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <LinearLayout
                android:id="@+id/contFacebookLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/x5dp">

                <ImageView
                    android:layout_width="@dimen/x20dp"
                    android:layout_height="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x3dp"
                    android:src="@drawable/img_facebook_icon" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/x3dp"
                    android:text="Facebook"
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/x1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x25dp"
                android:layout_marginRight="@dimen/x25dp"
                android:background="@color/seperator_light_gray"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/contTwitterLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/x5dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x20dp"
                    android:layout_height="@dimen/x20dp"
                    android:layout_marginRight="@dimen/x3dp"

                    android:src="@drawable/img_twitter_icon" />


                <com.tekrevol.papp.widget.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/x3dp"
                    android:text="Twitter"
                    android:textColor="@color/txtDarkGrey"
                    android:textSize="@dimen/s12"
                    app:fontFamily="@string/font_regular" />


            </LinearLayout>

        </LinearLayout>


        <com.tekrevol.papp.widget.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5dp"
            android:layout_marginBottom="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x3dp"
            android:text="Don't have an account?"
            android:textColor="@color/txtDarkGrey"
            android:textSize="@dimen/s12"
            app:fontFamily="@string/font_regular" />


        <LinearLayout
            android:id="@+id/contSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x3dp">

            <ImageView
                android:layout_width="@dimen/x20dp"
                android:layout_height="@dimen/x20dp"
                android:layout_marginRight="@dimen/x3dp"
                android:src="@drawable/img_sign_up_add" />


            <com.tekrevol.papp.widget.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/x3dp"
                android:text="Sign Up"
                android:textColor="@color/txtDarkGrey"
                android:textSize="@dimen/s14"
                app:fontFamily="@string/font_bold" />


        </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/community_pic" />



    </LinearLayout>


</ScrollView>