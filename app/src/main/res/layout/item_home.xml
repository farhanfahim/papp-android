<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="@dimen/x5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/placeHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imgbakery"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/placeHolder"
            android:layout_alignLeft="@id/placeHolder"
            android:layout_alignRight="@id/placeHolder"
            android:layout_alignTop="@id/placeHolder"
            android:alpha="1"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/placeHolder"
            android:layout_alignLeft="@id/placeHolder"
            android:layout_alignRight="@id/placeHolder"
            android:layout_alignTop="@id/placeHolder"
            android:background="#50000000"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x30dp">

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/txtItemHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Bakery and Dairy"
                android:padding="@dimen/x2dp"
                android:textColor="#fff"
                android:textSize="16sp"
                app:typeface="@string/font_bold" />

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/txtItemSubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingBottom="@dimen/x8dp"
                android:paddingLeft="@dimen/x2dp"
                android:paddingRight="@dimen/x2dp"
                android:text="Milk, Egg, Bread"
                android:textColor="#fff"
                android:textSize="11sp"
                app:typeface="@string/font_normal" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>