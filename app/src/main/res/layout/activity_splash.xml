<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:background="@drawable/b_menu_bg">

    <LinearLayout
        android:id="@+id/contParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/x30dp">



        <ImageView
            android:layout_width="240dp"
            android:layout_height="@dimen/x60dp"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:padding="@dimen/x2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/akuh_logo" />


        <ImageView
            android:layout_width="240dp"
            android:layout_height="@dimen/x60dp"
            android:layout_marginBottom="@dimen/x15dp"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:padding="@dimen/x2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/family_hifazat_logo_no_padding" />

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30dp"
            android:gravity="center"
            android:text="@string/tag_line"
            android:textColor="@color/base_amber"
            android:textSize="14sp"
            app:typeface="@string/font_bold" />

    </LinearLayout>


</RelativeLayout>
