<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/akuh_bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/x30dp">

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:id="@+id/contParentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x10dp"
            app:corner_radius="@dimen/x30dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <edu.aku.ehs.widget.AnyTextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EHS "
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s25"
                    app:typeface="@string/font_bold" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/x30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/logo" />


            </LinearLayout>

            <edu.aku.ehs.widget.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Employee Health Screening"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s10"
                app:typeface="@string/font_medium" />


        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/x280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/x10dp"
        android:padding="@dimen/x8dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/akuh_logo" />


</RelativeLayout>
