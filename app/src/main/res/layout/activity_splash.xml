<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_banner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/x30dp">

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:id="@+id/contParentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/c_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x10dp"
            app:corner_radius="@dimen/x30dp">


            <ImageView
                android:layout_width="@dimen/x120dp"
                android:layout_height="@dimen/x120dp"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:padding="@dimen/x2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <edu.aku.ehs.widget.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/x10dp"
                android:text="Employee Health Screening"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/s14"
                app:typeface="@string/font_bold" />


        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/x280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/x10dp"
        android:padding="@dimen/x8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/akuh_logo" />


</RelativeLayout>
