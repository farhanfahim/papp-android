<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login">

    <LinearLayout
        android:id="@+id/contParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x125dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/a_family_hifazat_logo" />

        <edu.aku.akuh_health_first.widget.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="Access to Medical Information"
            android:textColor="@color/base_amber"
            android:textSize="22sp" />

    </LinearLayout>


</RelativeLayout>
