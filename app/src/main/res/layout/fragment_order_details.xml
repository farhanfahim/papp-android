<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imgbg_order"
            android:orientation="vertical"
            android:padding="@dimen/x10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:text="@string/date"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView

                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x5dp"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginRight="@dimen/x10dp"
                android:background="#26FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:paddingTop="@dimen/x5dp"
                    android:text="@string/order_id2"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtOrderID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x5dp"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginRight="@dimen/x10dp"
                android:background="#26FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:paddingTop="@dimen/x5dp"
                    android:text="@string/frequency2"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtFrequency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x5dp"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginRight="@dimen/x10dp"
                android:background="#26FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:paddingTop="@dimen/x5dp"
                    android:text="@string/delivery_time2"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtDeliveryTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x5dp"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginRight="@dimen/x10dp"
                android:background="#26FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:paddingTop="@dimen/x5dp"
                    android:text="@string/address2"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|left"
                    android:lines="2"
                    android:padding="@dimen/x5dp"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginRight="@dimen/x10dp"
                android:background="#26FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:paddingTop="@dimen/x5dp"
                    android:text="@string/additional_notes2"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtAdditionalNotes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x5dp"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginRight="@dimen/x10dp"
                android:background="#26FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/x5dp"
                    android:paddingLeft="@dimen/x10dp"
                    android:paddingRight="@dimen/x5dp"
                    android:paddingTop="@dimen/x5dp"
                    android:text="@string/total2"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    app:typeface="@string/font_bold" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txtCurrencyType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x5dp"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#FFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <GridView
        android:id="@+id/gvOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F1F1F1"
        android:gravity="center"
        android:numColumns="2"
        android:paddingBottom="@dimen/x5dp"
        android:paddingLeft="@dimen/x5dp"
        android:paddingRight="@dimen/x5dp"
        android:paddingTop="@dimen/x5dp"
        android:verticalSpacing="@dimen/x5dp" />


    <TextView
        android:id="@+id/txtEmpty"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No Items"
        android:textSize="18sp"
        android:visibility="gone" />


</LinearLayout>