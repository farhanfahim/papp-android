<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/x5dp"
    android:paddingLeft="@dimen/x10dp"
    android:paddingRight="@dimen/x10dp"
    android:paddingTop="@dimen/x5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x5dp"
        android:animateLayoutChanges="true"
        android:padding="@dimen/x2dp"
        card_view:cardCornerRadius="x5dp"
        card_view:cardElevation="x15dp">

        <LinearLayout
            android:id="@+id/contItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c_white"
                android:gravity="center"
                android:orientation="vertical">


                <edu.aku.family_hifazat.widget.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5dp"
                    android:text="File Name:"
                    android:textColor="@color/txt_aku_blue"
                    android:textSize="@dimen/s16"
                    app:typeface="@string/font_bold" />

                <edu.aku.family_hifazat.widget.AnyTextView
                    android:id="@+id/txtFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5dp"
                    android:text="File Name"
                    android:textSize="@dimen/s14"
                    app:typeface="@string/font_regular" />


            </LinearLayout>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10dp"
                android:src="@drawable/img_delete"
                android:tint="@color/colorPrimary" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>