<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x45dp"
                android:src="@drawable/imglogo" />


            <com.andreabaccega.widget.FormEditText
                android:id="@+id/edtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15dp"
                android:background="@drawable/imgtext_bar"
                android:drawableLeft="@drawable/imgemail"
                android:drawablePadding="@dimen/x15dp"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:paddingLeft="@dimen/x15dp"
                android:paddingRight="@dimen/x15dp"
                android:singleLine="true"
                android:textColor="@color/offwhite"
                android:textColorHint="@color/offwhite"
                android:textSize="14sp"
                app:testType="email" />


            <com.andreabaccega.widget.FormEditText
                android:id="@+id/edtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20dp"
                android:background="@drawable/imgtext_bar"
                android:drawableLeft="@drawable/imgpassword"
                android:drawablePadding="@dimen/x15dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/x18dp"
                android:paddingRight="@dimen/x15dp"
                android:singleLine="true"
                android:textColor="@color/offwhite"
                android:textColorHint="@color/offwhite"
                android:textSize="14sp"
                app:testType="nocheck" />

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/txtForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20dp"
                android:gravity="right"
                android:paddingRight="@dimen/x30dp"
                android:text="@string/forgot_password"
                android:textColor="@color/offwhite"
                app:typeface="@string/font_bold" />


            <!--<ImageButton-->
                <!--android:id="@+id/btnLogin"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="#0000"-->
                <!--android:src="@drawable/imglogin" />-->

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/btnLogin"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="@string/login"
                android:layout_marginBottom="@dimen/x50dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_yes"
                app:typeface="@string/font_normal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:layout_weight="1"
                    android:src="@color/star_grey" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x10dp"
                    android:text="@string/new_user"
                    android:textColor="@color/offwhite"
                    android:textSize="16sp"
                    app:typeface="@string/font_bold" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:layout_weight="1"
                    android:src="@color/star_grey" />

            </LinearLayout>

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/txtSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10dp"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/x15dp"
                android:text="@string/not_a_member_create_an_account"
                android:textAllCaps="false"
                android:textColor="@color/offwhite"
                app:typeface="@string/font_normal" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>