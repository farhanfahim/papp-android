<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contParent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerView"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/edtSearchBar">

        </android.support.v7.widget.RecyclerView>

        <edu.aku.family_hifazat.widget.AnyTextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
            android:gravity="center"
            android:padding="@dimen/x10dp"
            android:text="No Report Found"
            android:textColor="@color/txt_aku_blue"
            android:textSize="@dimen/s18"
            android:visibility="gone"
            app:typeface="@string/font_bold" />

        <edu.aku.family_hifazat.widget.AnyEditTextView
            android:id="@+id/edtSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/x5dp"
            android:background="@drawable/searchbar"
            android:drawablePadding="@dimen/x5dp"
            android:hint="@string/search"
            android:maxLines="1"
            android:padding="@dimen/x10dp"
            android:textSize="@dimen/s14"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/x30dp"
            android:layout_height="@dimen/x30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/x7dp"
            android:padding="@dimen/x7dp"
            android:src="@drawable/search2"
            android:tint="@color/txt_aku_blue"
            android:visibility="gone" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x8dp"
            android:layout_marginRight="@dimen/x8dp"
            android:padding="@dimen/x8dp"
            android:src="@drawable/plus"
            android:visibility="gone"
            app:fab_colorNormal="@color/colorPrimaryDark"
            app:fab_colorPressed="@color/base_amber"
            app:fab_colorRipple="@color/base_reddish" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/glucoTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x8dp"
        android:background="@color/c_white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <edu.aku.family_hifazat.widget.AnyTextView
                android:id="@+id/txtFasting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gluco_button_left_selected"
                android:gravity="center"
                android:padding="@dimen/x10dp"
                android:text="Fasting"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">


            <edu.aku.family_hifazat.widget.AnyTextView
                android:id="@+id/txtRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gluco_button_right_unselected"
                android:gravity="center"
                android:padding="@dimen/x10dp"
                android:text="Random"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/s12"
                app:typeface="@string/font_bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

