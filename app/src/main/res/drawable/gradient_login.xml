<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/base_blue"
                android:endColor="#C9FAFF"
                android:type="linear"
                android:angle="90" />
            <stroke
                android:width="0dp"
                android:color="#fff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="1dp"
                android:top="2dp"
                android:right="1dp"
                android:bottom="2dp" />
        </shape>
    </item>

</layer-list>